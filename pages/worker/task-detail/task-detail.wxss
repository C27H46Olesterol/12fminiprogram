/* pages/worker/task-detail/task-detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.loading {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.task-detail {
  padding-bottom: 100rpx;
}

.section {
  background: white;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-item {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 200rpx;
  color: #666;
  font-size: 28rpx;
}

.value {
  flex: 1;
  color: #333;
  font-size: 28rpx;
}

.phone {
  color: #1890ff;
  text-decoration: underline;
}

.priority {
  font-weight: bold;
}

.status {
  color: #52c41a;
  font-weight: bold;
}

.images {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
}

.image {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border-radius: 10rpx;
}

.actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 20rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

.btn.primary {
  background: #1890ff;
  color: white;
}

.btn.success {
  background: #52c41a;
  color: white;
}

.btn.warning {
  background: #fa8c16;
  color: white;
}

.btn.secondary {
  background: #f0f0f0;
  color: #333;
}

.history-list {
  padding: 20rpx 30rpx;
}

.history-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-item:last-child {
  border-bottom: none;
}

.history-time {
  width: 200rpx;
  color: #999;
  font-size: 24rpx;
}

.history-content {
  flex: 1;
}

.history-status {
  display: block;
  color: #1890ff;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.history-operator {
  display: block;
  color: #666;
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.history-remark {
  display: block;
  color: #333;
  font-size: 26rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: white;
  width: 600rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.modal-body {
  padding: 30rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-label {
  display: block;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
}

.modal-footer .btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  border: none;
}

/* 评价显示样式 */
.rating-display {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rating-display .stars {
  display: flex;
  gap: 5rpx;
}

.rating-display .star {
  font-size: 32rpx;
  color: #ddd;
}

.rating-display .star.active {
  color: #fadb14;
}

.rating-display .rating-text {
  font-size: 28rpx;
  font-weight: bold;
}

.feedback-content {
  color: #666;
  line-height: 1.6;
}