/* pages/manager/send-parts/send-parts.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 100rpx;
}

.header {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.issue-info {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 44rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  font-size: 28rpx;
  min-width: 160rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  flex: 1;
}

.form-section {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4d4f;
  font-size: 32rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.work-hours-input {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.unit {
  color: #666;
  font-size: 28rpx;
}

.tips-text {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999;
}

.tips {
  background: #fffbf0;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  border-left: 4rpx solid #ffa940;
}

.tip-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #d48806;
  margin-bottom: 15rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #8c6e1f;
  line-height: 40rpx;
  margin-bottom: 8rpx;
}

.tip-item:last-child {
  margin-bottom: 0;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-cancel {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.btn-confirm {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.btn-confirm[disabled] {
  opacity: 0.5;
}

