/* pages/worker/activateLog/activateLog.wxss */
.container {
  background-color: #f8fafc;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部搜索与筛选 */
.filter-section {
  padding: 24rpx 32rpx;
  background: #ffffff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-bar {
  display: flex;
  align-items: center;
  background: #f1f5f9;
  padding: 16rpx 24rpx;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
}

.filter-bar {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8fafc;
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #64748b;
  border: 1rpx solid #e2e8f0;
}

.filter-item.active {
  background: #eff6ff;
  color: #1677ff;
  border-color: #1677ff;
}

.filter-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.filter-item icon {
  margin-left: 10rpx;
}

/* 列表容器 */
.record-list {
  flex: 1;
  padding: 24rpx;
  box-sizing: border-box;
}

/* 记录卡片 */
.record-card {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.record-card.expanded {
  box-shadow: 0 12rpx 30rpx rgba(0,0,0,0.08);
}

.card-header {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-main {
  flex: 1;
}

.sn-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.sn-label {
  font-size: 24rpx;
  color: #94a3b8;
  margin-right: 8rpx;
}

.sn-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
  margin-right: 20rpx;
}

.status-tag {
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

.tag-success { background: #f0fdf4; color: #16a34a; }
.tag-warning { background: #fffbeb; color: #d97706; }
.tag-error { background: #fef2f2; color: #dc2626; }

.sub-info {
  font-size: 26rpx;
  color: #64748b;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.sub-item .sub-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
  opacity: 0.6;
}

.date-item {
  color: #94a3b8;
}

.divider {
  margin: 0 16rpx;
  color: #e2e8f0;
}

.arrow-icon {
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #94a3b8;
  border-bottom: 4rpx solid #94a3b8;
  transition: transform 0.3s ease;
}

.arrow-icon.down { transform: rotate(45deg); margin-bottom: 8rpx;}
.arrow-icon.up { transform: rotate(-135deg); margin-top: 8rpx;}

/* 缩略图 */
.card-summary-imgs {
  padding: 0 32rpx 32rpx;
  display: flex;
  align-items: center;
}

.summary-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  border: 1rpx solid #f1f5f9;
}

.img-count {
  font-size: 24rpx;
  color: #94a3b8;
  margin-left: auto;
}

/* 详细展区 */
.card-detail {
  padding: 0 32rpx 32rpx;
  border-top: 1rpx solid #f1f5f9;
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from { opacity: 0; transform: translateY(-10rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.detail-section {
  padding: 24rpx 0;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  line-height: 1.6;
}

.detail-item .label {
  color: #94a3b8;
  width: 140rpx;
  flex-shrink: 0;
}

.detail-item .value {
  color: #475569;
}

.text-error { color: #ef4444; font-weight: 500; }

.image-group {
  margin-top: 24rpx;
}

.image-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-grid image {
  width: calc((100% - 32rpx) / 3);
  height: 180rpx;
  border-radius: 12rpx;
  background: #f8fafc;
}

.empty-state {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #94a3b8;
  font-size: 28rpx;
}

.bottom-safe {
  height: 80rpx;
}