/* pages/worker/request-parts/request-parts.wxss - 极简质感风格 */

.container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #f8f9fa 0%, #e9ecef 100%);
  padding-bottom: 90rpx;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ===== Header 区域 - 简洁优雅 ===== */
.header {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  padding: 20rpx 24rpx;
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.15);
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 6rpx;
  letter-spacing: 0.8rpx;
  -webkit-font-smoothing: antialiased;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.95;
  display: block;
  font-weight: 500;
  -webkit-font-smoothing: antialiased;
}

/* ===== 信息卡片 - 磨砂玻璃质感 ===== */
.issue-info {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 12rpx 16rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    0 1rpx 2rpx rgba(0, 0, 0, 0.02);
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  line-height: 40rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #595959;
  font-size: 28rpx;
  min-width: 130rpx;
  font-weight: 600;
  -webkit-font-smoothing: antialiased;
}

.value {
  color: #1f1f1f;
  font-size: 28rpx;
  font-weight: 600;
  flex: 1;
  -webkit-font-smoothing: antialiased;
}

/* ===== 表单区域 - 现代简约 ===== */
.form-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  margin: 12rpx 16rpx;
  padding: 18rpx 20rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.03);
  box-shadow: 
    0 2rpx 8rpx rgba(0, 0, 0, 0.04),
    0 1rpx 2rpx rgba(0, 0, 0, 0.02);
  transition: all 0.3s ease;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f1f1f;
  margin-bottom: 12rpx;
  letter-spacing: 0.5rpx;
  -webkit-font-smoothing: antialiased;
}

.required {
  color: #ff4d4f;
  font-size: 30rpx;
  font-weight: 700;
}

/* ===== 文本框 - 优雅简洁 ===== */
.textarea {
  width: 100%;
  min-height: 100rpx;
  max-height: 100rpx;
  padding: 14rpx 16rpx;
  border: 1rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  background: #fafafa;
  color: #1f1f1f;
  font-weight: 500;
  transition: all 0.25s ease;
  -webkit-font-smoothing: antialiased;
}

.textarea:focus {
  border-color: #40a9ff;
  background: #fff;
  box-shadow: 0 0 0 2rpx rgba(24, 144, 255, 0.08);
}

.textarea::placeholder {
  color: #bfbfbf;
  font-size: 28rpx;
  font-weight: 400;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #8c8c8c;
  margin-top: 6rpx;
  font-weight: 500;
  -webkit-font-smoothing: antialiased;
}

/* ===== 底部按钮 - 现代扁平 ===== */
.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 14rpx;
  padding: 14rpx 16rpx;
  padding-bottom: calc(14rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.04);
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.btn-cancel {
  flex: 1;
  height: 76rpx;
  line-height: 76rpx;
  background: #f5f5f5;
  color: #434343;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s ease;
  -webkit-font-smoothing: antialiased;
  letter-spacing: 0.5rpx;
}

.btn-cancel:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.btn-confirm {
  flex: 2;
  height: 76rpx;
  line-height: 76rpx;
  background: linear-gradient(135deg, #1890ff 0%, #0050b3 100%);
  color: white;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  box-shadow: 
    0 4rpx 12rpx rgba(24, 144, 255, 0.2),
    0 2rpx 4rpx rgba(24, 144, 255, 0.1);
  transition: all 0.2s ease;
  letter-spacing: 1rpx;
  -webkit-font-smoothing: antialiased;
}

.btn-confirm:active {
  background: linear-gradient(135deg, #0050b3 0%, #003a8c 100%);
  transform: scale(0.98);
  box-shadow: 
    0 2rpx 8rpx rgba(24, 144, 255, 0.25),
    0 1rpx 2rpx rgba(24, 144, 255, 0.15);
}

.btn-confirm[disabled] {
  opacity: 0.5;
  background: linear-gradient(135deg, #d9d9d9 0%, #bfbfbf 100%);
  box-shadow: none;
}
