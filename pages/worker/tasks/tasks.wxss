/* pages/worker/tasks/tasks.wxss */
.tasks-container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #f5f7fa 0%, #e8ecf1 100%);
  padding: 0;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow: auto;
}

/* 筛选区域 - 固定在顶部 */
.filter-section {
  position: sticky;
  top: 0;
  background: white;
  padding: 12rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

/* 第一行：状态筛选 */
.filter-tabs-secondary {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

/* 第二行：优先级筛选 */
.filter-tabs-primary {
  display: flex;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 4rpx;
}

.filter-tab {
  flex: 1;
  padding: 12rpx 8rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #595959;
  border-radius: 6rpx;
  transition: all 0.25s ease;
  -webkit-font-smoothing: antialiased;
}

.filter-tab.active {
  background: #1890ff;
  color: #ffffff;
  font-weight: 700;
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.3);
}

.filter-tab-status {
  flex: 1;
  padding: 10rpx 12rpx;
  background: #fafafa;
  border: 2rpx solid #e8e8e8;
  border-radius: 6rpx;
  text-align: center;
  transition: all 0.25s ease;
  position: relative;
}

.filter-tab-status.active {
  background: #e6f7ff;
  border-color: #1890ff;
}

.status-text {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #262626;
  -webkit-font-smoothing: antialiased;
}

.filter-tab-status.active .status-text {
  color: #1890ff;
}

.status-hint {
  display: block;
  font-size: 20rpx;
  color: #ff4d4f;
  margin-top: 4rpx;
  line-height: 1.3;
  font-weight: 500;
}

/* 小红点提示 */
.red-dot {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
  border: 2rpx solid white;
  box-shadow: 0 0 0 1rpx #ff4d4f;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.8;
    transform: scale(1.1);
  }
}

/* 任务列表 */
.tasks-list {
  padding: 12rpx 16rpx;
}

.task-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.25s ease;
}

.task-item:active {
  transform: scale(0.99);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.task-title-row {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 12rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1f1f1f;
  -webkit-font-smoothing: antialiased;
  letter-spacing: 0.5rpx;
  margin-right: 12rpx;
  flex: 1;
}

.task-desc {
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
  line-height: 1.5;
  margin-bottom: 12rpx;
  -webkit-font-smoothing: antialiased;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding: 10rpx 0;
  background: #fafafa;
  margin: 12rpx -20rpx;
  padding: 10rpx 20rpx;
}

.meta-left {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-right {
  display: flex;
  align-items: center;
}

.task-customer {
  font-size: 26rpx;
  font-weight: 500;
  color: #595959;
  -webkit-font-smoothing: antialiased;
}

.task-phone {
  font-size: 26rpx;
  font-weight: 500;
  color: #595959;
  -webkit-font-smoothing: antialiased;
}

.task-time {
  font-size: 24rpx;
  font-weight: 500;
  color: #8c8c8c;
  -webkit-font-smoothing: antialiased;
}

/* 任务操作 */
.task-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-top: 12rpx;
}

.task-actions .btn {
  flex: 1;
  min-width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  font-weight: 600;
  border-radius: 8rpx;
  -webkit-font-smoothing: antialiased;
  transition: all 0.2s ease;
  padding: 0;
}

.task-actions .btn-outline {
  background: white;
  color: #1890ff;
  border: 2rpx solid #1890ff;
}

.task-actions .btn-outline:active {
  background: #e6f7ff;
  transform: scale(0.98);
}

.task-actions .btn-disabled {
  background: #f5f5f5;
  color: #bfbfbf;
  border: 2rpx solid #d9d9d9;
  font-weight: 500;
}

.task-actions .btn-primary {
  background: linear-gradient(135deg, #1890ff 0%, #0050b3 100%);
  color: white;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(24, 144, 255, 0.3);
}

.task-actions .btn-primary:active {
  background: linear-gradient(135deg, #0050b3 0%, #003a8c 100%);
  transform: scale(0.98);
}

.task-actions .btn-success {
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: white;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(82, 196, 26, 0.3);
}

.task-actions .btn-success:active {
  background: linear-gradient(135deg, #389e0d 0%, #237804 100%);
  transform: scale(0.98);
}

.task-actions .btn-warning {
  background: linear-gradient(135deg, #faad14 0%, #d48806 100%);
  color: white;
  border: none;
  box-shadow: 0 2rpx 6rpx rgba(250, 173, 20, 0.3);
}

.task-actions .btn-warning:active {
  background: linear-gradient(135deg, #d48806 0%, #ad6800 100%);
  transform: scale(0.98);
}

/* 优先级标签 */
.priority-tag {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-weight: 700;
  -webkit-font-smoothing: antialiased;
  white-space: nowrap;
  margin-right: 8rpx;
}

.priority-tag.priority-high {
  background: #ff4d4f;
  color: white;
}

.priority-tag.priority-medium {
  background: #faad14;
  color: white;
}

.priority-tag.priority-low {
  background: #52c41a;
  color: white;
}

/* 状态标签 */
.status-tag {
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  font-weight: 700;
  white-space: nowrap;
  -webkit-font-smoothing: antialiased;
}

.status-tag.status-assigned {
  background: #1890ff;
  color: white;
}

.status-tag.status-processing {
  background: #faad14;
  color: white;
}

.status-tag.status-parts_request,
.status-tag.status-parts_return_approval {
  background: #ff7a45;
  color: white;
}

.status-tag.status-parts_sent,
.status-tag.status-parts_received {
  background: #13c2c2;
  color: white;
}

.status-tag.status-completed {
  background: #52c41a;
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
  color: #bfbfbf;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  text-align: center;
  color: #8c8c8c;
  -webkit-font-smoothing: antialiased;
}

.empty-tip {
  font-size: 26rpx;
  text-align: center;
  color: #bfbfbf;
  font-weight: 500;
  -webkit-font-smoothing: antialiased;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 30rpx 16rpx;
}

.load-more .btn {
  padding: 20rpx 50rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 8rpx;
  -webkit-font-smoothing: antialiased;
}

