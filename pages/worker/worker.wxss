/* pages/worker/worker.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.worker-header {
  background: linear-gradient(135deg, #1677ff 0%, #4096ff 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(22, 119, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.header-content {
  display: flex;
  flex-direction: column;
  z-index: 1;
}

.greeting {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.header-bg-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.2;
  position: absolute;
  right: 20rpx;
  bottom: -20rpx;
  transform: rotate(-15deg);
}

/* 功能区网格 */
.workbench-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 30rpx;
}

/* 卡片样式 */
.work-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s;
  position: relative;
}

.work-card:active {
  transform: scale(0.98);
  background-color: #fafafa;
}

/* 图标圆圈 */
.icon-circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.icon-circle.blue {
  background-color: #e6f7ff;
}

.icon-circle.orange {
  background-color: #fff7e6;
}

.icon-circle.green {
  background-color: #f6ffed;
}

.work-icon {
  width: 73rpx;
  height: 73rpx;
}

/* 文字信息 */
.work-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.work-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
  padding: 0 20px;
}

/* 箭头装饰 */
.work-card::after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #e0e0e0;
  border-style: solid;
  transform: rotate(45deg);
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -10rpx;
}
