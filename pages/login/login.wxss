/* pages/login/login.wxss */

.form-input{
  min-height: 6vh;
  border-radius: 6px;
}

/* ===== 容器 ===== */
.login-container {
  min-height: 100vh;
  background-color: var(--background-color);
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* ===== 背景装饰 ===== */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(180deg, var(--primary-color) 0%, rgba(25, 118, 210, 0) 100%);
  pointer-events: none;
  z-index: 0;
}

/* ===== 登录内容 ===== */
.login-content {
  position: relative;
  z-index: 1;
  padding: 40rpx 48rpx;
  width: 100%;
}

/* ===== 头部 Logo 区域 ===== */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 480rpx;
  height: 480rpx;
  margin: 0 auto 32rpx;
  background: #ffffff00;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1); */
}

.logo-image {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* ===== 登录表单 ===== */
.login-form {
  background: transparent;
  border-radius: 24rpx;
  padding: 64rpx 48rpx;
  box-shadow: none;
}

/* ===== 手机号输入区域 ===== */
.phone-input-section {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.phone-input {
  width: 100%;
  height: 96rpx;
  background: #F5F7FA;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  transition: all 0.3s ease;
}

.phone-input:focus {
  border-color: var(--primary-color);
  background: #FFFFFF;
}

/* ===== 手机号登录按钮 ===== */
.phone-login-btn {
  width: 100%;
  height: 96rpx;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(25, 118, 210, 0.2);
}

.phone-login-btn:active {
  background: #1565C0;
  transform: translateY(2rpx);
}

.phone-login-btn:disabled {
  background: #BDBDBD;
  box-shadow: none;
  opacity: 0.8;
}

/* ===== 分割线 ===== */
.divider {
  display: flex;
  align-items: center;
  margin: 48rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #E0E0E0;
}

.divider-text {
  margin: 0 24rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* ===== 微信授权登录按钮 ===== */
.wechat-login-btn {
  width: 100% !important;
  padding: 0;
  background: #07C160;
  border-radius: 12rpx;
  height: 96rpx;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 100%;
}

.wechat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 16rpx;
  filter: brightness(0) invert(1); /* 变为白色 */
}

.btn-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
}

.wechat-login-btn:active {
  background: #06AD56;
}

/* ===== 提示信息 ===== */
.tips {
  text-align: center;
  margin-top: 48rpx;
}

.tip-text {
  font-size: 24rpx;
  color: var(--text-disabled);
}
