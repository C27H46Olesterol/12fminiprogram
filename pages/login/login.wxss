/* pages/login/login.wxss */

.form-input{
  min-height: 6vh;
  border-radius: 6px;
}

/* ===== 容器 ===== */
.login-container {
  min-height: 100vh;
  background-color: var(--background-color);
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* ===== 背景装饰 ===== */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(180deg, var(--primary-color) 0%, rgba(25, 118, 210, 0) 100%);
  pointer-events: none;
  z-index: 0;
}

/* ===== 登录内容 ===== */
.login-content {
  position: relative;
  z-index: 1;
  padding: 40rpx 48rpx;
  width: 100%;
}

/* ===== 头部 Logo 区域 ===== */
.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 480rpx;
  height: 480rpx;
  margin: 0 auto 32rpx;
  background: #ffffff00;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1); */
}

.logo-image {
  width: 100%;
  height: 100%;
  border-radius: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* ===== 登录表单 ===== */
.login-form {
  background: transparent;
  border-radius: 24rpx;
  padding: 64rpx 48rpx;
  box-shadow: none;
}

/* ===== 手机号输入区域 ===== */
.phone-input-section {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.phone-input {
  width: 100%;
  height: 96rpx;
  background: #F5F7FA;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  color: var(--text-primary);
  transition: all 0.3s ease;
}

.phone-input:focus {
  border-color: var(--primary-color);
  background: #FFFFFF;
}

/* ===== 手机号登录按钮 ===== */
.phone-login-btn {
  width: 100%;
  height: 96rpx;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 16rpx rgba(25, 118, 210, 0.2);
}

.phone-login-btn:active {
  background: #1565C0;
  transform: translateY(2rpx);
}

.phone-login-btn:disabled {
  background: #BDBDBD;
  box-shadow: none;
  opacity: 0.8;
}

/* ===== 微信授权登录按钮 ===== */
.get-phone-btn {
  width: 100% !important;
  background: #07C160;
  border-radius: 48rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.2);
}

.get-phone-btn:active {
  background: #06AD56;
  transform: scale(0.98);
}

.wechat-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* ===== 用户协议勾选 ===== */
.agreement-row {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
  gap: 12rpx;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #07C160;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.checkbox.checked {
  background: #07C160;
}

.agreement-text {
  font-size: 24rpx;
  color: #666;
}

.agreement-text .link {
  color: #07C160;
  font-weight: 500;
  display: inline;
}

/* ===== 协议弹窗 ===== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.modal-overlay.show {
  visibility: visible;
  opacity: 1;
}

.agreement-modal {
  width: 80%;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  transform: translateY(100rpx);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  max-height: 70vh;
}

.modal-overlay.show .agreement-modal {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
  padding: 10rpx;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 40rpx;
}

.agreement-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

.modal-footer {
  padding-top: 20rpx;
}

.agree-btn {
  background: #07C160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 600;
}

/* ===== 提示信息 ===== */
.tips {
  text-align: center;
  margin-top: 48rpx;
}

.tip-text {
  font-size: 24rpx;
  color: var(--text-disabled);
}
