/* pages/com/com.wxss */
.ad-container {
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  background-color: #000;
  display: flex;
  flex-direction: column;
}

.ad-image {
  width: 100%;
  height: 85vh; /* 留出底部给品牌信息 */
  display: block;
}

.skip-area {
  position: absolute;
  top: 100rpx; /* 避开刘海屏 */
  right: 40rpx;
  z-index: 1000;
  padding: 20rpx; /* 增大点击热区 */
}

.skip-btn {
  background: rgba(0, 0, 0, 0.5);
  color: #ffffff;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 26rpx;
  backdrop-filter: blur(15rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.countdown {
  margin-left: 12rpx;
  color: var(--primary-color);
  font-weight: 700;
  min-width: 30rpx;
  text-align: center;
}

.footer {
  height: 15vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.footer-logo {
  width: 160rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
  letter-spacing: 2rpx;
}

/* 动效 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.ad-image {
  animation: fadeIn 0.8s ease-in;
}