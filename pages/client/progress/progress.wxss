/* pages/client/progress/progress.wxss */
.progress-container {
  min-height: 100vh;
  background: var(--background-color);
  padding: 20rpx;
}

/* 搜索区域 */
.search-section {
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: var(--card-background);
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: var(--shadow);
}

.search-input {
  flex: 1;
  padding: 16rpx 20rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 26rpx;
  background: #F8F9FA;
  margin-right: 20rpx;
  min-height: 64rpx;
  box-sizing: border-box;
}

.search-input::placeholder {
  color: #999999;
  font-size: 24rpx;
}

.search-input:focus {
  border-color: var(--primary-color);
  background: #FFFFFF;
}

.search-btn {
  padding: 20rpx 32rpx;
  background: var(--primary-color);
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  white-space: nowrap;
}

.search-btn:active {
  background: #1565C0;
}

/* 筛选区域 */
.filter-section {
  margin-bottom: 30rpx;
}

.filter-tabs {
  display: flex;
  background: var(--card-background);
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: var(--shadow);
}

.filter-tab {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  font-size: 26rpx;
  color: var(--text-secondary);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.filter-tab.active {
  background: var(--primary-color);
  color: #FFFFFF;
  font-weight: 500;
}

/* 反馈列表 */
.feedback-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.feedback-item {
  background: var(--card-background);
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
  border-left: 6rpx solid var(--primary-color);
}

.feedback-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
}

.feedback-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.feedback-title-row {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 20rpx;
}

.feedback-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-right: 16rpx;
  flex: 1;
}

.feedback-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.feedback-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.meta-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.meta-right {
  display: flex;
  align-items: center;
}

.feedback-id {
  font-size: 22rpx;
  color: var(--text-disabled);
  font-family: monospace;
  background: #F5F5F5;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.feedback-time {
  font-size: 22rpx;
  color: var(--text-disabled);
}

.feedback-type {
  font-size: 22rpx;
  color: var(--text-secondary);
  background: #E3F2FD;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 处理进度信息 */
.progress-info {
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 16rpx;
}

.progress-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.progress-item:last-child {
  margin-bottom: 0;
}

.progress-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  min-width: 120rpx;
}

.progress-value {
  font-size: 24rpx;
  color: var(--text-primary);
  flex: 1;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  color: var(--text-disabled);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  text-align: center;
}

.empty-tip {
  font-size: 26rpx;
  text-align: center;
  opacity: 0.8;
}

/* 加载更多 */
.load-more {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more .btn {
  padding: 24rpx 48rpx;
  font-size: 26rpx;
}

/* 操作按钮区域 */
.action-buttons {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #F0F0F0;
  display: flex;
  justify-content: flex-end;
}

.btn-rate {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #FFB74D 0%, #FF9800 100%);
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 26rpx;
  border: none;
  box-shadow: 0 4px 12px rgba(255, 152, 0, 0.3);
  transition: all 0.3s ease;
}

.btn-rate:active {
  transform: scale(0.95);
  box-shadow: 0 2px 8px rgba(255, 152, 0, 0.4);
}

