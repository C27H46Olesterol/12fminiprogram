/* 设备选择下拉菜单特定样式 */
.device-dropdown {
  min-width: 500rpx; /* 增加宽度 */
  left: 50%;
  transform: translateX(-50%) translateY(-10rpx);
}

.device-dropdown.show {
  transform: translateX(-50%) translateY(0);
}

.device-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx !important;
  background: transparent !important;
  border: 1rpx solid transparent !important;
  margin: 5rpx !important;
}

.device-item.selected {
  background-color: #e6f7ff !important;
  border: 1rpx solid #91d5ff !important;
}

.device-img-small {
  width: 160rpx; /* 增加图片尺寸 */
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  background-color: #f5f5f5;
}

.device-info-small {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  justify-content: center;
}

.device-sn-small {
  font-size: 22rpx;
  color: #333;
  max-width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.device-status-dot.online {
  background-color: #52c41a;
  box-shadow: 0 0 8rpx rgba(82, 196, 26, 0.5);
}

.device-status-dot.offline {
  background-color: #bfbfbf;
}

