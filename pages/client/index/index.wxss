/* pages/client/index/index.wxss */

.client-home {
  padding-top: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 刷新停止提示 */
.refresh-notify {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ff4d4f;
  color: #fff;
  z-index: 2000; /* 确保在最上方 */
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  transform: translateY(-100%);
  transition: transform 0.3s ease-in-out;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.2);
}

.refresh-notify.show {
  transform: translateY(0);
}

.resume-btn {
  background: rgba(255, 255, 255, 0.25);
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  font-weight: bold;
}

.resume-btn:active {
  background: rgba(255, 255, 255, 0.4);
}

/* 远程遥控界面 (Main Section) */
.remote-control-section {
  padding: 16rpx 24rpx;
  background-color: transparent;
  border-radius: 32rpx;
  margin: 0 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 综合头部栏 */
.remote-header {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  align-items: flex-start; /* 顶部按钮水平对齐 */
  margin-bottom: 20rpx;
  padding: 0;
  position: relative;
  z-index: 100; 
}

/* 头部按钮项 (图标+文字) */
.header-btn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 0; /* 允许压缩内容以维持网格稳定 */
}

.btn-label {
  font-size: 24rpx; /* Increased from 22rpx */
  font-weight: bold; /* Added bold */
  color: #333; /* Darker color for better readability when bold */
  text-align: center;
  width: 100%;
  line-height: 1.2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 60rpx; /* Slightly adjusted to accommodate larger text */
}

/* 电源键 */
.power-btn {
  width: 120rpx; /* Increased from 100rpx */
  height: 120rpx; /* Increased from 100rpx */
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s;
  flex-shrink: 0;
}

.power-btn .btn-icon-img {
  width: 102rpx; /* Increased from 60rpx */
  height: 102rpx; /* Increased from 60rpx */
}

.power-btn.active {
  background-color: #00bfa5;
}

.power-btn.active .iconfont {
  color: #fff;
}

/* 设备选择器 (中央) */
.device-selector-container {
  grid-column: span 2; /* 占据中间两列 */
  display: flex;
  flex-direction: row; /* 改为横向排列 */
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
  width: 100%;
  min-width: 0;
  height: 120rpx; /* 与两侧按钮高度一致 */
  background-color: #fff;
  border-radius: 60rpx; /* 胶囊形状 */
  padding: 0 20rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
}

.selector-label {
  font-size: 24rpx;
  color: #666;
  display: none; /* 隐藏不必要的标签 */
}

.device-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  width: auto; /* 自适应宽度 */
  flex-shrink: 0;
}

.device-picker-wrap {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 4rpx; /* 减小内边距 */
  border-radius: 50%; /* 改为纯圆，包裹圆形图片 */
  /* box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08); */ /* 移除内部阴影 */
  border: 4rpx solid #f0f0f0; /* 增加初始边框宽度 */
  justify-content: center;
  position: relative;
  overflow: visible; /* 允许箭头溢出或准确定位 */
  transition: all 0.3s ease;
}

.device-picker-wrap.online {
  border-color: #52c41a;
  box-shadow: 0 0 12rpx rgba(82, 196, 26, 0.4);
}

.device-picker-wrap.offline {
  border-color: #e0e0e0;
  filter: grayscale(0.1);
}


.selected-device-img-large {
  width: 80rpx; /* 稍微调小以适应胶囊高度 */
  height: 80rpx;
  border-radius: 50%;
  background-color: #eee;
  flex-shrink: 0;
}

.picker-arrow-large {
  position: absolute;
  bottom: 0;
  right: -8rpx; /* 微调位置 */
  font-size: 20rpx;
  color: #1677ff;
  background: #fff;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  border: 4rpx solid #fff;
}
.picker-arrow-large.online {
  background-color: #52c41a;
}

.picker-arrow-large.offline {
  background-color: #bfbfbf;
}

.device-name-footer {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  text-align: left; /* 左对齐 */
  width: auto;
  flex: 1; /* 占据剩余空间 */
  height: auto;
  line-height: 1.2;
  display: -webkit-box; /* 改为多行显示或保持单行 */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal; /* 允许换行 */
  margin-top: 0;
}

/* 右侧按钮组 */
/* 移除了旧容器 */

.icon-btn {
  width: 100rpx; /* 统一按钮宽度 */
  height: 100rpx; /* 统一按钮高度 */
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  position: relative;
  flex-shrink: 0;
}

.icon-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

.icon-btn .btn-icon-img {
  width: 78rpx;
  height: 78rpx;
}

.menu-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #666;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 100rpx; /* 紧贴按钮下方 */
  right: 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10rpx);
  transition: all 0.3s;
  z-index: 9999; /* 显著提升层级到最上层 */
  min-width: 320rpx;
}

.dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-user-info {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  background-color: #fafafa;
}

.dropdown-user-info .user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.dropdown-user-info .user-phone {
  font-size: 22rpx;
  color: #999;
}

.dropdown-grid {
  display: flex;
  flex-direction: column; /* 改为纵向排列 */
  padding: 14rpx;
  /* gap: 12rpx; */

}

.dropdown-item {
  width: 100%; /* 占满宽度 */
  padding: 30rpx 15rpx; /* 增加内边距，放大按钮区域 */
  font-size: 32rpx; /* 放大字体 */
  /* 使用 background-image 实现渐变边界线 */
  background-image: 
    linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,0.1), rgba(0,0,0,0)),
    linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,0.1), rgba(0,0,0,0));
  background-position: top, bottom;
  background-size: 100% 1rpx;
  background-repeat: no-repeat;
  text-align: center;
  white-space: nowrap;
  border-radius: 0; /* 边界线设计通常不需要圆角，或者仅首尾需要，这里统一直角或微调 */
  transition: all 0.2s;
  box-sizing: border-box; /* 确保padding不撑大宽度 */
  margin: 0; /* 由 grid gap 控制间距 */
}

.dropdown-item.logout {
  color: #ff4d4f;
}

.dropdown-item:active {
  background: #f5f5f5;
}

/* 综合显示框 (Consolidated Display) */
.display-screen {
  background: linear-gradient(180deg, #ffffff 0%, #f0f9ff 100%);
  border: none;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 20rpx; /* Reduced from 30rpx */
  box-shadow: 0 12rpx 40rpx rgba(24, 144, 255, 0.08);
  flex-shrink: 0;
  overflow: hidden; /* 溢出隐藏 */
}

.display-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx; /* 增加行间距 */
}

.display-row:last-child {
  margin-bottom: 0;
}

.display-item {
  flex: 1; /* 平分空间确保中心点垂直对齐 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.display-label {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 4rpx;
}

.display-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
}

.display-value.active {
  color: #1890ff;
}

.display-value.error {
  color: #ff4d4f;
}

.display-value.nomal {
  color: #00cc00;
}

.display-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-top: 1rpx dashed rgba(24, 144, 255, 0.2);
  border-bottom: 1rpx dashed rgba(24, 144, 255, 0.2);
  margin: 10rpx 0;
}

.temp-display {
  display: flex;
  flex-direction: row !important;
  align-items: baseline;
  justify-content: center;
}

.temp-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.temp-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 8rpx;
}

.temp-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx; /* 数值左侧间距 */
  transform: translateY(10rpx); /* 微调位置使其在视觉上与大数值底部对齐更好看 */
}

.mode-display {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-text {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: bold;
}

/* 中间控制区域 (Split Layout) */
.control-panel-split {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx; /* Reduced from 30rpx */
  padding: 0 40rpx;
  align-items: center;
  overflow: hidden;
}

.control-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-title {
  font-size: 30rpx; /* Slightly smaller to save space */
  color: #666;
  margin-bottom: 15rpx; /* Reduced from 20rpx */
  font-weight: 500;
}

.control-pill {
  width: 160rpx; /* Increased from 140rpx */
  min-height: 300rpx; /* Increased from 260rpx */
  background-color: #fff;
  border-radius: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.control-btn {
  width: 130rpx; /* Increased from 110rpx */
  height: 130rpx; /* Increased from 110rpx */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  transition: all 0.2s;
}

.control-btn:active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.control-btn .control-icon-img {
  width: 102rpx; /* Increased from 64rpx */
  height: 102rpx; /* Increased from 64rpx */
}

.control-icon-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 功能按钮区域 */
.function-area {
  padding: 0 10rpx;
  margin-bottom: 20rpx;
}

.func-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx; /* 稍微压缩 gap 以便容纳固定宽度 */
  margin-bottom: 15rpx;
  overflow: hidden;
}

.func-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.func-btn {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 4rpx;
  transition: all 0.2s;
}

.func-btn.circle {
  width: 100rpx; /* 统一按钮宽度 */
  height: 100rpx; /* 统一按钮高度 */
  border-radius: 50%;
  flex-shrink: 0;
}

.func-btn:active {
  transform: scale(0.95);
}

.func-btn.active {
  background-color: #e6fffa;
  border: 2rpx solid #00bfa5;
}

.func-btn .func-icon-img {
  width: 72rpx;
  height: 72rpx;
}

.func-btn.active .func-icon-img {
  /* 如果需要激活态图标变色，可以使用 filter 或者准备特定的激活态图片，
     由于这里可能只有一套图片，暂时保持原样或透明度处理 */
}

.func-label {
  font-size: 24rpx; /* Increased from 22rpx */
  font-weight: bold; /* Added bold */
  color: #333; /* Darker color for better readability when bold */
  text-align: center;
  width: 130rpx;
  height: 60rpx; /* Slightly adjusted to accommodate larger text */
  line-height: 1.2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-top: 4rpx;
}

/* Obsolete iconfont styles removed */

/* 设备选择下拉菜单特定样式 */
.device-dropdown {
  width: 90vw; /* 调整宽度，占据大部分屏幕宽度 */
  left: 50%;
  transform: translateX(-50%) translateY(-10rpx);
  max-width: 680rpx; /* 设置最大宽度限制 */
}

.device-dropdown.show {
  transform: translateX(-50%) translateY(0);
}

.device-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx !important;
  background: transparent !important;
  border: 1rpx solid transparent !important;
  margin: 5rpx !important;
}

.device-item.selected {
  background-color: #e6f7ff !important;
  border: 1rpx solid #91d5ff !important;
}

.device-img-small {
  width: 160rpx; /* 保持大尺寸 */
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  background-color: #f5f5f5;
}

.device-info-small {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  justify-content: center;
}

.device-sn-small {
  font-size: 22rpx;
  color: #333;
  max-width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.device-status-dot.online {
  background-color: #52c41a;
  box-shadow: 0 0 8rpx rgba(82, 196, 26, 0.5);
}

.device-status-dot.offline {
  background-color: #bfbfbf;
}

/* 定时弹窗样式 */
.timer-modal-overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.timer-modal {
  width: 680rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.timer-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.timer-base {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 18rpx;
}
.timer-selected {
  font-size: 36rpx;
  color: #1890ff;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.timer-controls {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 24rpx;
}
.timer-arrow {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #f5f5f5;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size: 48rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.timer-btn-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.timer-tip {
  font-size: 22rpx;
  color: #999;
}
.timer-actions {
  display:flex;
  width:100%;
  gap: 20rpx;
}
.timer-actions .action-btn {
  flex: 1;
  height: 86rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.timer-actions .cancel {
  background: #f5f5f5;
  color: #333;
}
.timer-actions .confirm {
  background: #1890ff;
  color: #fff;
}

/* Device List View Styles */
.device-list-container {
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  max-height: 600rpx;
  overflow-y: auto;
  /* 隐藏滚动条 */
  -webkit-overflow-scrolling: touch;
}

.device-list-container::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.device-list-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 2rpx solid #f5f5f5;
  background-color: #fff;
  transition: all 0.2s;
  border-radius: 8rpx;
  margin-bottom: 8rpx;
}

.device-list-item:active {
  background-color: #fafafa;
}

.device-list-item.selected {
  background-color: #e6f7ff;
}

.device-list-indicator {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.device-list-indicator.online {
  background-color: #52c41a;
  box-shadow: 0 0 8rpx rgba(82, 196, 26, 0.5);
}

.device-list-indicator.offline {
  background-color: #d9d9d9;
}

.device-list-img {
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  margin-right: 24rpx;
  flex-shrink: 0;
  border: 1rpx solid #eee;
}

.device-list-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.info-row {
  display: flex;
  align-items: baseline;
  margin-bottom: 6rpx;
  line-height: 1.3;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 24rpx; /* 稍微放大 */
  color: #999;
  width: 120rpx; /* 调整宽度以适应稍大的字体 */
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx; /* 稍微放大 */
  color: #333;
  font-weight: 500;
  flex: 1;
  /* 确保溢出显示省略号 */
  display: block; 
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 0; /* 关键：配合 flex:1 必须设置具体的或0的width才能触发ellipsis */
}

/* 连接方式指示器 */
.device-connection-indicator {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

/* 设备列表删除按钮 (红色背景) */
.device-action-btn-red {
  width: 80rpx;
  height: 80rpx;
  background-color: #ff4d4f;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.2);
}

.device-action-btn-red:active {
  background-color: #d9363e;
  transform: scale(0.9);
}

.delete-icon {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  line-height: 1;
}

.connection-icon {
  width: 40rpx;
  height: 40rpx;
}

.bluetooth-icon {
  filter: brightness(0) saturate(100%) invert(42%) sepia(93%) saturate(1352%) hue-rotate(187deg) brightness(119%) contrast(119%);
}

/* 4G信号条 */
.signal-bars {
  display: flex;
  align-items: flex-end;
  gap: 2rpx;
  height: 32rpx;
}

.signal-bar {
  width: 4rpx;
  background-color: #d9d9d9;
  border-radius: 2rpx;
  transition: background-color 0.3s;
}

.signal-bar:nth-child(1) {
  height: 6rpx;
}

.signal-bar:nth-child(2) {
  height: 12rpx;
}

.signal-bar:nth-child(3) {
  height: 18rpx;
}

.signal-bar:nth-child(4) {
  height: 24rpx;
}

.signal-bar:nth-child(5) {
  height: 30rpx;
}

.signal-bar.active {
  background-color: #52c41a;
}

/* 显示屏中的连接状态 */
.connection-status {
  display: flex;
  align-items: center;
  justify-content: center;
}

.display-connection-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) saturate(100%) invert(42%) sepia(93%) saturate(1352%) hue-rotate(187deg) brightness(119%) contrast(119%);
}

.display-signal-bars {
  display: flex;
  align-items: flex-end;
  gap: 3rpx;
  height: 48rpx;
}

.display-signal-bar {
  width: 6rpx;
  background-color: #e0e0e0;
  border-radius: 3rpx;
  transition: background-color 0.3s;
}

.display-signal-bar:nth-child(1) {
  height: 10rpx;
}

.display-signal-bar:nth-child(2) {
  height: 20rpx;
}

.display-signal-bar:nth-child(3) {
  height: 30rpx;
}

.display-signal-bar:nth-child(4) {
  height: 40rpx;
}

.display-signal-bar:nth-child(5) {
  height: 48rpx;
}

.display-signal-bar.active {
  background-color: #1890ff;
}

/* 蓝牙弹窗样式 */
.bluetooth-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3000;
  backdrop-filter: blur(4rpx);
}

.bluetooth-modal {
  width: 90%;
  max-width: 650rpx;
  background: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  padding: 30rpx 40rpx;
  background: #f8f9fa;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.search-status {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.searching-spinner {
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #1890ff;
  border-top-color: transparent;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.bluetooth-list {
  max-height: 500rpx;
  padding: 0 20rpx;
}

.bluetooth-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background 0.2s;
}

.bluetooth-item:active {
  background: #f0f7ff;
}

.bt-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.bt-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.bt-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.bt-id {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.bt-rssi {
  font-size: 22rpx;
  color: #52c41a;
}

.no-bt-devices {
  padding: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.modal-footer {
  padding: 30rpx;
  display: flex;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.bt-action-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin: 0;
}

.bt-action-btn.refresh {
  background: #1890ff;
  color: #fff;
}

.bt-action-btn.close {
  background: #f5f5f5;
  color: #333;
}

/* 设备列表操作按钮 */
.device-action-btn {
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.device-action-btn text {
  font-size: 22rpx;
  color: #999;
}

.device-action-btn:active {
  background-color: #ffccc7;
}

.device-action-btn:active text {
  color: #ff4d4f;
}
