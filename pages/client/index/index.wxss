/* pages/client/index/index.wxss */

.client-home {
  padding-top: 40rpx;
}

.header-bar {
  padding: 0 10rpx;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

.add-device-btn {
  background: #E6F7FF;
  color: #1677ff;
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.section-title {
  font-size: 30rpx;
  color: #666;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
}

.section-add-btn {
  width: 48rpx;
  height: 48rpx;
  background: #1677ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.section-add-btn:active {
  background: #0958d9;
  transform: scale(0.9);
}

.section-plus-icon {
  font-size: 32rpx;
  font-weight: 300;
  color: #fff;
  line-height: 1;
}

/* 虚线添加设备框 */
.empty-device-box {
  width: 100%;
  height: 240rpx;
  border: 2rpx dashed #D9D9D9;
  border-radius: 24rpx;
  background: #FFFFFF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
}

.plus-large {
  font-size: 60rpx;
  font-weight: 300;
  margin-bottom: 16rpx;
  color: #ccc;
}

.empty-text {
  font-size: 26rpx;
}

/* 我的设备列表 */
.my-product-scroll {
  width: 100%;
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.my-product-list {
  display: flex;
  gap: 20rpx;
}

.my-product-item {
  width: 280rpx;
  flex-shrink: 0;
  padding: 0;
  overflow: hidden;
}

.my-product-img {
  width: 100%;
  height: 200rpx;
  background: #f0f0f0;
}

.my-product-info {
  padding: 20rpx;
}

.my-product-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.my-product-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background: #f6ffed;
  color: #52c41a;
}

/* 服务进度样式 */
.progress-card {
  display: flex;
  align-items: flex-start;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.progress-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.progress-content {
  flex: 1;
}

.progress-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.progress-desc {
  font-size: 26rpx;
  display: block;
  line-height: 1.6;
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

/* 服务进度空状态 */
.empty-progress-card {
  height: 160rpx;
  border-radius: 24rpx;
  box-shadow: none;
  border: none;
}

/* 用户信息卡片 */
.user-info-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 未登录状态 */
.user-info-unlogin {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.unlogin-text {
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.sub-text {
  font-size: 26rpx;
  color: #999;
}

.login-btn {
  background: #1677ff;
  color: #fff;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  margin: 0;
}

/* 已登录状态 */
.user-info-logged {
  display: flex;
  align-items: center;
  position: relative;
}

.user-avatar-box {
  margin-right: 24rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f0f0f0;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-top-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.user-phone {
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
}

.user-address {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.icon-location {
  margin-right: 6rpx;
  font-size: 24rpx;
}

/* 菜单按钮 */
.menu-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
  margin-left: 16rpx;
  transition: all 0.3s;
}

.menu-btn:active {
  background: #e8e8e8;
}

.menu-icon {
  font-size: 40rpx;
  font-weight: bold;
  color: #666;
  line-height: 1;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 70rpx;
  right: 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  overflow: hidden;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10rpx);
  transition: all 0.3s;
  z-index: 100;
  min-width: 200rpx;
}

.dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-item {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s;
}

.dropdown-item:last-child {
  border-bottom: none;
}

.dropdown-item:active {
  background: #f5f5f5;
}
