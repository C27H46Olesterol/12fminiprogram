/* pages/client/index/index.wxss */

.client-home {
  padding-top: 10rpx;
  background-color: #f5f5f5;
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 刷新停止提示 */
.refresh-notify {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #ff4d4f;
  color: #fff;
  z-index: 2000; /* 确保在最上方 */
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  transform: translateY(-100%);
  transition: transform 0.3s ease-in-out;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.2);
}

.refresh-notify.show {
  transform: translateY(0);
}

.resume-btn {
  background: rgba(255, 255, 255, 0.25);
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  font-weight: bold;
}

.resume-btn:active {
  background: rgba(255, 255, 255, 0.4);
}

/* 故障警告 */
.fault-alert-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 3000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.fault-alert-container {
  background: linear-gradient(135deg, #fff 0%, #f8f8f8 100%);
  border-radius: 32rpx;
  width: 100%;
  max-width: 640rpx;
  max-height: 80vh;
  overflow-y: auto;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.25);
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.fault-alert-header {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  padding: 32rpx;
  display: flex;
  align-items: center;
  border-radius: 32rpx 32rpx 0 0;
  position: relative;
}

.fault-icon-container {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
}

.fault-icon {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.fault-title-container {
  flex: 1;
}

.fault-code {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
  letter-spacing: 2rpx;
}

.fault-title {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

.fault-close-btn {
  width: 56rpx;
  height: 56rpx;
  background: rgba(0, 0, 0, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 16rpx;
}

.close-icon {
  font-size: 48rpx;
  color: #fff;
  line-height: 1;
  font-weight: 300;
}

.fault-section {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.fault-section:last-of-type {
  border-bottom: none;
}

.fault-section-title {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.section-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.fault-cause {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  background: #fff7e6;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #ffa940;
}

.fault-solutions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.solution-item {
  display: flex;
  align-items: flex-start;
  background: #f6ffed;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 6rpx solid #52c41a;
}

.solution-number {
  font-size: 24rpx;
  font-weight: bold;
  color: #52c41a;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.solution-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.5;
  flex: 1;
}

.fault-alert-footer {
  padding: 24rpx 32rpx 32rpx;
  display: flex;
  gap: 16rpx;
}

.fault-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
  border: none;
  padding: 0;
  margin: 0;
}

.fault-btn::after {
  border: none;
}

.fault-btn-secondary {
  background: #f5f5f5;
  color: #666;
}

.fault-btn-secondary:active {
  background: #e0e0e0;
}

.fault-btn-primary {
  background: linear-gradient(135deg, #1890ff 0%, #096dd9 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(24, 144, 255, 0.3);
}

.fault-btn-primary:active {
  background: linear-gradient(135deg, #096dd9 0%, #0050b3 100%);
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.4);
}

/* 远程遥控界面 (Main Section) */
.remote-control-section {
  padding: 10rpx 24rpx; /* 进一步压缩上下边距 */
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 均匀分布 */
  padding-bottom: 170rpx; /* 留出TabBar空间 (140rpx) 并预留缓冲区域 */
  box-sizing: border-box;
}

/* 综合头部栏 */
.remote-header {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  align-items: flex-start; /* 顶部按钮水平对齐 */
  margin-bottom: 10rpx;
  padding: 0;
  position: relative;
  z-index: 100; 
}

/* 头部按钮项 (图标+文字) */
.header-btn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 0;
  position: relative; /* 为弹出菜单提供定位基准 */
}

.btn-label {
  font-size: 24rpx; /* Increased from 22rpx */
  font-weight: bold; /* Added bold */
  color: #333; /* Darker color for better readability when bold */
  text-align: center;
  width: 100%;
  line-height: 1.2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 60rpx; /* Slightly adjusted to accommodate larger text */
}

/* 电源键 */
.power-btn {
  width: 120rpx; /* Increased from 100rpx */
  height: 120rpx; /* Increased from 100rpx */
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s;
  flex-shrink: 0;
}

.power-btn .btn-icon-img {
  width: 102rpx; /* Increased from 60rpx */
  height: 102rpx; /* Increased from 60rpx */
}

.power-btn.active {
  background-color: #00bfa5;
}

.power-btn.active .iconfont {
  color: #fff;
}

/* 设备选择器 (中央) */
.device-selector-container {
  grid-column: span 2; /* 占据中间两列 */
  display: flex;
  flex-direction: row; /* 改为横向排列 */
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
  width: 100%;
  min-width: 0;
  height: 120rpx; /* 与两侧按钮高度一致 */
  background-color: #fff;
  border-radius: 60rpx; /* 胶囊形状 */
  padding: 0 20rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
}

.selector-label {
  font-size: 24rpx;
  color: #666;
  display: none; /* 隐藏不必要的标签 */
}

.device-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  width: auto; /* 自适应宽度 */
  flex-shrink: 0;
}

.device-picker-wrap {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 4rpx; /* 减小内边距 */
  border-radius: 50%; /* 改为纯圆，包裹圆形图片 */
  /* box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08); */ /* 移除内部阴影 */
  border: 4rpx solid #f0f0f0; /* 增加初始边框宽度 */
  justify-content: center;
  position: relative;
  overflow: visible; /* 允许箭头溢出或准确定位 */
  transition: all 0.3s ease;
}

.device-picker-wrap.online {
  border-color: #52c41a;
  box-shadow: 0 0 12rpx rgba(82, 196, 26, 0.4);
}

.device-picker-wrap.offline {
  border-color: #e0e0e0;
  filter: grayscale(0.1);
}


.selected-device-img-large {
  width: 80rpx; /* 稍微调小以适应胶囊高度 */
  height: 80rpx;
  border-radius: 50%;
  background-color: #eee;
  flex-shrink: 0;
}

.picker-arrow-large {
  position: absolute;
  bottom: 0;
  right: -8rpx; /* 微调位置 */
  font-size: 20rpx;
  color: #1677ff;
  background: #fff;
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  border: 4rpx solid #fff;
}
.picker-arrow-large.online {
  background-color: #52c41a;
}

.picker-arrow-large.offline {
  background-color: #bfbfbf;
}

.device-name-footer {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  text-align: left; /* 左对齐 */
  width: auto;
  flex: 1; /* 占据剩余空间 */
  height: auto;
  line-height: 1.2;
  display: -webkit-box; /* 改为多行显示或保持单行 */
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal; /* 允许换行 */
  margin-top: 0;
}

/* 右侧按钮组 */
/* 移除了旧容器 */

.icon-btn {
  width: 100rpx; /* 统一按钮宽度 */
  height: 100rpx; /* 统一按钮高度 */
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  position: relative;
  flex-shrink: 0;
}

.icon-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

.icon-btn .btn-icon-img {
  width: 78rpx;
  height: 78rpx;
}

.menu-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #666;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 100rpx; /* 紧贴按钮下方 */
  right: 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10rpx);
  transition: all 0.3s;
  z-index: 9999; /* 显著提升层级到最上层 */
  min-width: 320rpx;
}

.dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-user-info {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  background-color: #fafafa;
}

.dropdown-user-info .user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.dropdown-user-info .user-phone {
  font-size: 22rpx;
  color: #999;
}

.dropdown-grid {
  display: flex;
  flex-direction: column; /* 改为纵向排列 */
  padding: 14rpx;
  /* gap: 12rpx; */

}

.dropdown-item {
  width: 100%; /* 占满宽度 */
  padding: 30rpx 15rpx; /* 增加内边距，放大按钮区域 */
  font-size: 32rpx; /* 放大字体 */
  font-weight: bold; /* 加粗 */
  /* 使用 background-image 实现渐变边界线 */
  background-image: 
    linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,0.1), rgba(0,0,0,0)),
    linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,0.1), rgba(0,0,0,0));
  background-position: top, bottom;
  background-size: 100% 1rpx;
  background-repeat: no-repeat;
  text-align: center;
  white-space: nowrap;
  border-radius: 0; /* 边界线设计通常不需要圆角，或者仅首尾需要，这里统一直角或微调 */
  transition: all 0.2s;
  box-sizing: border-box; /* 确保padding不撑大宽度 */
  margin: 0; /* 由 grid gap 控制间距 */
}

.dropdown-item.logout {
  color: #ff4d4f;
}

.dropdown-item:active {
  background: #f5f5f5;
}

/* 综合显示框 (Consolidated Display) */
.display-screen {
  background: linear-gradient(180deg, #ffffff 0%, #f0f9ff 100%);
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 24rpx; /* 进一步压缩内边距 */
  margin-bottom: 16rpx; /* 压缩至 16rpx */
  box-shadow: 0 12rpx 40rpx rgba(24, 144, 255, 0.08);
  flex-shrink: 0;
  overflow: hidden;
}

.display-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx; /* 压缩至 8rpx */
}

.display-row:last-child {
  margin-bottom: 0;
}

.display-item {
  flex: 1; /* 平分空间确保中心点垂直对齐 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.display-label {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 4rpx;
}

.display-label-mini {
  font-size: 20rpx;
  color: #8c8c8c;
  margin-bottom: 2rpx;
}

.display-item-content {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 40rpx;
}

.display-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
}

.display-value.active {
  color: #1890ff;
}

.display-value.error {
  color: #ff4d4f;
}

.display-value.nomal {
  color: #00cc00;
}

.display-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 4rpx 0; /* 压缩主显示区域间距 */
  border-top: 1rpx dashed rgba(24, 144, 255, 0.2);
  border-bottom: 1rpx dashed rgba(24, 144, 255, 0.2);
  margin: 6rpx 0; /* 压缩外边距 */
}

.temp-display {
  display: flex;
  flex-direction: row !important;
  align-items: baseline;
  justify-content: center;
}

.temp-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.temp-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 8rpx;
}

.temp-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx; /* 数值左侧间距 */
  transform: translateY(10rpx); /* 微调位置使其在视觉上与大数值底部对齐更好看 */
}

.mode-display {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-text {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: bold;
}

/* 中间控制区域 (Split Layout) */
.control-panel-split {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx; /* Reduced from 30rpx */
  padding: 0 40rpx;
  align-items: center;
  overflow: hidden;
}

.control-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-title {
  font-size: 30rpx; /* Slightly smaller to save space */
  color: #666;
  margin-bottom: 15rpx; /* Reduced from 20rpx */
  font-weight: 500;
}

.control-pill {
  width: 160rpx; /* Increased from 140rpx */
  min-height: 300rpx; /* Increased from 260rpx */
  background-color: #fff;
  border-radius: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.control-btn {
  width: 130rpx; /* Increased from 110rpx */
  height: 130rpx; /* Increased from 110rpx */
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  transition: all 0.2s;
}

.control-btn:active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.control-btn .control-icon-img {
  width: 102rpx; /* Increased from 64rpx */
  height: 102rpx; /* Increased from 64rpx */
}

.control-icon-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 功能按钮区域 */
.function-area {
  padding: 0 10rpx;
  margin-bottom: 40rpx;
}

.func-grid-row {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  align-items: start;
}

.func-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  min-height: 180rpx;
  overflow: visible; /* 确保阴影不被裁剪 */
}

/* 统一按钮样式 */
.func-btn.circle {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
  flex-shrink: 0;
  transition: all 0.2s cubic-bezier(0.18, 0.89, 0.32, 1.28);
  position: relative; /* 为指示标记定位 */
}

.func-btn.circle.active .ellipsis-marker {
  background-color: #ffffff; /* 变为不透明纯白 */
  color: #1890ff; /* 对应主题蓝 */
  border-color: #ffffff;
}

.func-btn.circle:active {
  transform: scale(0.92);
  background-color: #f5f5f5;
}

.func-btn.circle.active {
  background-color: #1890ff;
  border-color: #1890ff;
  box-shadow: 0 6rpx 20rpx rgba(24, 144, 255, 0.3);
}

.func-btn .func-icon-img {
  width: 70rpx;
  height: 70rpx;
  transition: all 0.2s;
}

.func-btn.circle.active .func-icon-img {
  filter: brightness(0) invert(1); /* 激活时图标变白 */
}

.func-label {
  font-size: 24rpx;
  font-weight: 500;
  color: #666;
  margin-top: 12rpx;
  text-align: center;
  width: 140rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
}

.func-btn-wrapper .active + .func-label {
  color: #1890ff;
  font-weight: bold;
}

/* 展开式二级菜单 - 基础样式 */
.expand-menu {
  position: absolute;
  bottom: 160rpx; /* 默认向上弹出 */
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column-reverse; 
  gap: 25rpx;
  z-index: 1000;
  pointer-events: none;
  width: 350rpx;
  align-items: flex-start;
  padding-left: 114rpx;
}

/* 连接方式专用弹出菜单 (向下弹出，精确中心对齐) */
.connect-menu {
  top: 130rpx !important; 
  bottom: auto !important;
  right: calc(50% - 61rpx) !important; /* 50%是父容器中心，61rpx是二级图标半径+内边距补正。 */
  left: auto !important;
  transform: none !important;
  flex-direction: column !important; /* 向下扩展 */
  width: auto !important;
  align-items: flex-end !important;
  padding-left: 0 !important;
}

.connect-menu .expand-item {
  flex-direction: row; /* WXML中Text在前，View在后，Row即为Text左Icon右 */
  justify-content: flex-end;
  transform: translateY(-40rpx) scale(0.8); /* 从上方淡入 */
  transition-delay: calc(var(--i) * 0.08s);
}

.connect-menu.show .expand-item {
  transform: translateY(0) scale(1);
}

.expand-item.left-text .expand-text {
  margin-left: 0;
  margin-right: 20rpx; /* 文字在图标左侧，间距在右 */
