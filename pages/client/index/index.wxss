/* pages/client/index/index.wxss */

.client-home {
  padding-top: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 远程遥控界面 (Main Section) */
.remote-control-section {
  padding: 24rpx 32rpx;
  background-color: transparent;
  border-radius: 32rpx;
  margin: 0 20rpx 40rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 综合头部栏 */
.remote-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
  position: relative;
}

/* 头部按钮项 (图标+文字) */
.header-btn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 100rpx;
}

.btn-label {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

/* 电源键 */
.power-btn {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s;
}

.power-btn .iconfont {
  font-size: 44rpx;
  color: #ff4d4f;
}

.power-btn.active {
  background-color: #00bfa5;
}

.power-btn.active .iconfont {
  color: #fff;
}

/* 设备选择器 (中央) */
.device-selector-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 0 20rpx;
  gap: 4rpx;
}

.selector-label {
  font-size: 20rpx;
  color: #999;
  font-weight: 400;
}

.device-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.device-picker-wrap {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  max-width: 100%;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

.device-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-right: 12rpx;
  max-width: 200rpx;
  overflow: hidden;
  white-space: nowrap;
  /* 文字渐变消失效果 */
  mask-image: linear-gradient(to right, black 80%, transparent 100%);
  -webkit-mask-image: linear-gradient(to right, black 80%, transparent 100%);
}

.picker-arrow {
  font-size: 16rpx;
  color: #bfbfbf;
}

/* 右侧按钮组 */
.header-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon-btn {
  width: 90rpx;
  height: 90rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  position: relative;
}

.icon-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

.icon-btn .iconfont {
  font-size: 40rpx;
  color: #1677ff;
}

.menu-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #666;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 100rpx; /* 紧贴按钮下方 */
  right: 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10rpx);
  transition: all 0.3s;
  z-index: 2000; /* 确保在最顶层 */
  min-width: 320rpx; /* 增加宽度以容纳两列 */
}

.dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-user-info {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  background-color: #fafafa;
}

.dropdown-user-info .user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.dropdown-user-info .user-phone {
  font-size: 22rpx;
  color: #999;
}

.dropdown-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center; /* 只有一个时居中 */
  padding: 10rpx;
}

.dropdown-item {
  flex: 0 0 45%; /* 每排最多两个，留出间隙 */
  padding: 20rpx 10rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  white-space: nowrap;
  border-radius: 8rpx;
  margin: 5rpx;
  transition: background 0.2s;
}

.dropdown-item.logout {
  color: #ff4d4f;
}

.dropdown-item:active {
  background: #f5f5f5;
}

/* 综合显示框 (Consolidated Display) */
.display-screen {
  background: linear-gradient(180deg, #ffffff 0%, #f0f9ff 100%);
  border: none;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 12rpx 40rpx rgba(24, 144, 255, 0.08);
  flex-shrink: 0;
}

.display-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.display-row:last-child {
  margin-bottom: 0;
}

.display-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.display-label {
  font-size: 22rpx;
  color: #8c8c8c;
  margin-bottom: 6rpx;
}

.display-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #262626;
}

.display-value.active {
  color: #1890ff;
}

.display-value.error {
  color: #ff4d4f;
}

.display-main {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 0;
  border-top: 1rpx dashed rgba(24, 144, 255, 0.2);
  border-bottom: 1rpx dashed rgba(24, 144, 255, 0.2);
  margin: 20rpx 0;
  position: relative;
}

.temp-display {
  display: flex;
  align-items: baseline;
  position: relative;
}

.temp-value {
  font-size: 88rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.temp-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 8rpx;
}

.temp-label {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
}

.mode-display {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid #bae7ff;
}

.mode-text {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: bold;
}

/* 中间控制区域 (Split Layout) */
.control-panel-split {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
  padding: 0 40rpx;
  align-items: center;
}

.control-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-title {
  font-size: 34rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.control-pill {
  width: 160rpx;
  min-height: 300rpx;
  background-color: #fff;
  border-radius: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.control-btn {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  transition: all 0.2s;
}

.control-btn:active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.control-btn .iconfont {
  font-size: 80rpx;
  color: #666;
}

.control-btn:active .iconfont {
  color: #1890ff;
}

.control-icon-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 功能按钮区域 */
.function-area {
  padding: 0 10rpx;
  margin-bottom: 20rpx;
}

.func-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.func-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.func-btn {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 12rpx;
  transition: all 0.2s;
}

.func-btn.circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.func-btn:active {
  transform: scale(0.95);
}

.func-btn.active {
  background-color: #e6fffa;
  border: 2rpx solid #00bfa5;
}

.func-btn .iconfont {
  font-size: 40rpx;
  color: #333;
}

.func-btn.active .iconfont {
  color: #00bfa5;
}

.func-label {
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

