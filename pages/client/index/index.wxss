/* pages/client/index/index.wxss */

.client-home {
  padding-top: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 远程遥控界面 (Main Section) */
.remote-control-section {
  padding: 16rpx 24rpx;
  background-color: transparent;
  border-radius: 32rpx;
  margin: 0 10rpx 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

/* 综合头部栏 */
.remote-header {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  align-items: flex-start; /* 顶部按钮水平对齐 */
  margin-bottom: 20rpx;
  padding: 0;
  position: relative;
  z-index: 100; 
}

/* 头部按钮项 (图标+文字) */
.header-btn-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  min-width: 0; /* 允许压缩内容以维持网格稳定 */
}

.btn-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  width: 100%;
  line-height: 1.2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 最多显示两行 */
  overflow: hidden;
  height: 54rpx; /* 固定高度确保换行不影响布局 */
}

/* 电源键 */
.power-btn {
  width: 100rpx; /* 统一按钮宽度 */
  height: 100rpx; /* 统一按钮高度 */
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s;
  flex-shrink: 0;
}

.power-btn .btn-icon-img {
  width: 60rpx;
  height: 60rpx;
}

.power-btn.active {
  background-color: #00bfa5;
}

.power-btn.active .iconfont {
  color: #fff;
}

/* 设备选择器 (中央) */
.device-selector-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  gap: 8rpx;
  position: relative;
  width: 100%;
  min-width: 0;
}

.selector-label {
  font-size: 24rpx;
  color: #666;
}

.device-selector {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.device-picker-wrap {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 6rpx; /* 极简边距 */
  border-radius: 50%; /* 改为纯圆，包裹圆形图片 */
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
  justify-content: center;
  position: relative;
  overflow: visible; /* 允许箭头溢出或准确定位 */
}


.selected-device-img-large {
  width: 88rpx; /* 调整大小以匹配左右按钮高度，确保文字对齐 (88+padding 12+border 2 ≈ 102rpx) */
  height: 88rpx;
  border-radius: 50%;
  background-color: #eee;
  flex-shrink: 0;
}

.picker-arrow-large {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  font-size: 20rpx;
  color: #1677ff;
  background: #fff;
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  border: 1rpx solid #f0f0f0;
}

.device-name-footer {
  font-size: 22rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  width: 100%;
  height: 54rpx; /* 固定高度防止撑开 */
  line-height: 1.2;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 右侧按钮组 */
/* 移除了旧容器 */

.icon-btn {
  width: 100rpx; /* 统一按钮宽度 */
  height: 100rpx; /* 统一按钮高度 */
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #f0f0f0;
  position: relative;
  flex-shrink: 0;
}

.icon-btn:active {
  background-color: #f5f5f5;
  transform: scale(0.95);
}

.icon-btn .btn-icon-img {
  width: 48rpx;
  height: 48rpx;
}

.menu-icon {
  font-size: 36rpx;
  font-weight: bold;
  color: #666;
}

/* 下拉菜单 */
.dropdown-menu {
  position: absolute;
  top: 100rpx; /* 紧贴按钮下方 */
  right: 0;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10rpx);
  transition: all 0.3s;
  z-index: 9999; /* 显著提升层级到最上层 */
  min-width: 320rpx;
}

.dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
}

.dropdown-user-info {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  background-color: #fafafa;
}

.dropdown-user-info .user-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
}

.dropdown-user-info .user-phone {
  font-size: 22rpx;
  color: #999;
}

.dropdown-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: center; /* 只有一个时居中 */
  padding: 10rpx;
}

.dropdown-item {
  flex: 0 0 45%; /* 每排最多两个，留出间隙 */
  padding: 20rpx 10rpx;
  font-size: 26rpx;
  color: #333;
  text-align: center;
  white-space: nowrap;
  border-radius: 8rpx;
  margin: 5rpx;
  transition: background 0.2s;
}

.dropdown-item.logout {
  color: #ff4d4f;
}

.dropdown-item:active {
  background: #f5f5f5;
}

/* 综合显示框 (Consolidated Display) */
.display-screen {
  background: linear-gradient(180deg, #ffffff 0%, #f0f9ff 100%);
  border: none;
  border-radius: 32rpx;
  padding: 24rpx;
  margin-bottom: 30rpx; /* 固定并增大间距 */
  box-shadow: 0 12rpx 40rpx rgba(24, 144, 255, 0.08);
  flex-shrink: 0;
  overflow: hidden; /* 溢出隐藏 */
}

.display-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx; /* 增加行间距 */
}

.display-row:last-child {
  margin-bottom: 0;
}

.display-item {
  flex: 1; /* 平分空间确保中心点垂直对齐 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.display-label {
  font-size: 26rpx;
  color: #8c8c8c;
  margin-bottom: 4rpx;
}

.display-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
}

.display-value.active {
  color: #1890ff;
}

.display-value.error {
  color: #ff4d4f;
}

.display-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-top: 1rpx dashed rgba(24, 144, 255, 0.2);
  border-bottom: 1rpx dashed rgba(24, 144, 255, 0.2);
  margin: 10rpx 0;
}

.temp-display {
  display: flex;
  flex-direction: row !important;
  align-items: baseline;
  justify-content: center;
}

.temp-value {
  font-size: 80rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.temp-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 8rpx;
}

.temp-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx; /* 数值左侧间距 */
  transform: translateY(10rpx); /* 微调位置使其在视觉上与大数值底部对齐更好看 */
}

.mode-display {
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-text {
  font-size: 32rpx;
  color: #1890ff;
  font-weight: bold;
}

/* 中间控制区域 (Split Layout) */
.control-panel-split {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx; /* 固定并增大间距 */
  padding: 0 40rpx;
  align-items: center;
  overflow: hidden;
}

.control-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-title {
  font-size: 34rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.control-pill {
  width: 140rpx;
  min-height: 260rpx;
  background-color: #fff;
  border-radius: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.control-btn {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  transition: all 0.2s;
}

.control-btn:active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.control-btn .control-icon-img {
  width: 64rpx;
  height: 64rpx;
}

.control-icon-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 功能按钮区域 */
.function-area {
  padding: 0 10rpx;
  margin-bottom: 20rpx;
}

.func-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx; /* 稍微压缩 gap 以便容纳固定宽度 */
  margin-bottom: 15rpx;
  overflow: hidden;
}

.func-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.func-btn {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 4rpx;
  transition: all 0.2s;
}

.func-btn.circle {
  width: 100rpx; /* 统一按钮宽度 */
  height: 100rpx; /* 统一按钮高度 */
  border-radius: 50%;
  flex-shrink: 0;
}

.func-btn:active {
  transform: scale(0.95);
}

.func-btn.active {
  background-color: #e6fffa;
  border: 2rpx solid #00bfa5;
}

.func-btn .func-icon-img {
  width: 54rpx;
  height: 54rpx;
}

.func-btn.active .func-icon-img {
  /* 如果需要激活态图标变色，可以使用 filter 或者准备特定的激活态图片，
     由于这里可能只有一套图片，暂时保持原样或透明度处理 */
}

.func-label {
  font-size: 22rpx;
  color: #666;
  text-align: center;
  width: 130rpx;
  height: 55rpx; /* 固定高度确保两行文字不撑开间距 */
  line-height: 1.2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* 溢出换行，最多两行 */
  overflow: hidden;
  margin-top: 4rpx;
}

/* Obsolete iconfont styles removed */

/* 设备选择下拉菜单特定样式 */
.device-dropdown {
  min-width: 500rpx; /* 增加宽度 */
  left: 50%;
  transform: translateX(-50%) translateY(-10rpx);
}

.device-dropdown.show {
  transform: translateX(-50%) translateY(0);
}

.device-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx !important;
  background: transparent !important;
  border: 1rpx solid transparent !important;
  margin: 5rpx !important;
}

.device-item.selected {
  background-color: #e6f7ff !important;
  border: 1rpx solid #91d5ff !important;
}

.device-img-small {
  width: 160rpx; /* 保持大尺寸 */
  height: 160rpx;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  background-color: #f5f5f5;
}

.device-info-small {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  justify-content: center;
}

.device-sn-small {
  font-size: 22rpx;
  color: #333;
  max-width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.device-status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.device-status-dot.online {
  background-color: #52c41a;
  box-shadow: 0 0 8rpx rgba(82, 196, 26, 0.5);
}

.device-status-dot.offline {
  background-color: #bfbfbf;
}

/* 定时弹窗样式 */
.timer-modal-overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.timer-modal {
  width: 680rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.timer-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.timer-base {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 18rpx;
}
.timer-selected {
  font-size: 36rpx;
  color: #1890ff;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.timer-controls {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 24rpx;
}
.timer-arrow {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: #f5f5f5;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size: 48rpx;
  color: #333;
  margin-bottom: 8rpx;
}
.timer-btn-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}
.timer-tip {
  font-size: 22rpx;
  color: #999;
}
.timer-actions {
  display:flex;
  width:100%;
  gap: 20rpx;
}
.timer-actions .action-btn {
  flex: 1;
  height: 86rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.timer-actions .cancel {
  background: #f5f5f5;
  color: #333;
}
.timer-actions .confirm {
  background: #1890ff;
  color: #fff;
}

