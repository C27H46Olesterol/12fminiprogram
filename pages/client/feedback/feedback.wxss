/* pages/client/feedback/feedback.wxss */
.feedback-container {
  min-height: 100vh;
  background: var(--background-color);
  padding: 24rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

/* 当显示备用导航栏时调整padding */
.feedback-container.has-backup-nav {
  padding-top: 108rpx;
}

/* 备用导航栏样式 */
.backup-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 1000;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.nav-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-text {
  font-size: 28rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
}

.nav-center {
  flex: 1;
  text-align: center;
}

/* 表单样式 */
.feedback-form {
  max-width: 100%;
  margin: 0 auto;
}

.form-section {
  background: var(--card-background);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
  transition: all 0.3s ease;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.label-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.label-tag.required {
  background: rgba(244, 67, 54, 0.1);
  color: var(--error-color);
}

.label-tag.optional {
  background: rgba(76, 175, 80, 0.1);
  color: var(--success-color);
}

.form-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-input:focus {
  border-color: var(--primary-color);
  outline: none;
}

/* 产品码输入区 */
.product-code-input-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

.scan-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  height: 88rpx;
  background: #FFFFFF;
  border: 2rpx solid var(--primary-color);
  border-radius: 8rpx;
  color: var(--primary-color);
  font-size: 28rpx;
  font-weight: 500;
  margin: 0;
  padding: 0;
  width: 100%;
}

.scan-btn:active {
  background: rgba(25, 118, 210, 0.05);
}

.scan-icon {
  font-size: 32rpx;
}

/* 常见故障多选 */
.fault-checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.fault-checkbox-item {
  display: flex;
  align-items: center;
  min-width: 45%;
}

.fault-checkbox {
  transform: scale(0.8);
  margin-right: 8rpx;
}

.fault-text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 详细描述 */
.textarea-container {
  position: relative;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

/* 图片上传 */
.image-upload {
  margin-top: 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 16rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background: #F5F5F5;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
}

.image-upload-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed var(--border-color);
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #F9F9F9;
}

.image-upload-btn:active {
  background: #F0F0F0;
}

.upload-icon {
  font-size: 48rpx;
  color: var(--text-disabled);
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: var(--text-disabled);
}

.upload-tip {
  font-size: 24rpx;
  color: var(--text-disabled);
  display: block;
}

/* 位置选择 */
.location-selector-wrapper {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.location-picker {
  flex: 1;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-text {
  font-size: 28rpx;
  color: var(--text-primary);
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.picker-arrow {
  font-size: 24rpx;
  color: var(--text-disabled);
}

.location-btn {
  width: 140rpx;
  height: 88rpx;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  background: var(--secondary-color);
  color: #FFFFFF;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.location-btn:active {
  opacity: 0.9;
}

.location-detail-input {
  margin-top: 16rpx;
}

.location-full-display {
  margin-top: 16rpx;
  padding: 16rpx;
  background: rgba(25, 118, 210, 0.05);
  border-radius: 8rpx;
  border-left: 6rpx solid var(--primary-color);
}

.location-full-text {
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

/* 底部按钮 */
.form-actions {
  padding: 24rpx 0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--primary-color);
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
  padding: 0;
}

.submit-btn:active {
  opacity: 0.9;
}

.submit-btn[disabled] {
  background: #CCCCCC;
  opacity: 1;
}

/* 查看模式样式 */
.issue-detail {
  padding-bottom: 40rpx;
}

.section {
  background: var(--card-background);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  color: var(--text-secondary);
  flex-shrink: 0;
}

.value {
  flex: 1;
  color: var(--text-primary);
  word-break: break-all;
}

.phone {
  color: var(--primary-color);
  font-weight: 500;
}

.status {
  font-weight: 600;
}

.priority {
  font-weight: 600;
}

.images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
}

.cancel-issue-bar {
  margin-top: 40rpx;
  padding: 0 32rpx;
}

.cancel-issue-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--error-color);
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.cancel-issue-btn:active {
  opacity: 0.9;
}
