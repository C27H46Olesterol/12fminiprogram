/* pages/client/feedback/feedback.wxss */
page {
  background-color: #F5F7FA;
}

.feedback-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 40rpx;
}

/* 头部 */
.header-section {
  position: relative;
  height: 300rpx;
  background: #1976D2;
  overflow: hidden;
  margin-bottom: -60rpx; /* 让表单卡片上浮 */
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1976D2 0%, #1565C0 100%);
}

.header-bg::after {
  content: '';
  position: absolute;
  bottom: -50rpx;
  left: -10%;
  width: 120%;
  height: 100rpx;
  background: #F5F7FA;
  border-radius: 50% 50% 0 0;
}

.header-content {
  position: relative;
  z-index: 1;
  padding: 60rpx 40rpx;
  color: #FFFFFF;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 表单容器 */
.form-container {
  padding: 0 30rpx;
  position: relative;
  z-index: 2;
}

/* 表单卡片 */
.form-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: #1976D2;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

/* 表单项 */
.form-group {
  margin-bottom: 30rpx;
  border-bottom: 1rpx solid #F0F0F0;
  padding-bottom: 20rpx;
}

.form-group.no-border {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.form-group:last-child {
  border-bottom: none;
  margin-bottom: 0;
  padding-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.required-mark {
  color: #F44336;
  margin-left: 8rpx;
}

.label-desc {
  font-size: 24rpx;
  color: #999999;
  margin-left: 16rpx;
  font-weight: normal;
}

.option-mark {
  font-size: 24rpx;
  color: #4CAF50;
  margin-left: 16rpx;
  font-weight: normal;
}

.form-input {
  font-size: 30rpx;
  color: #333333;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
}

.input-placeholder {
  color: #CCCCCC;
}

/* 扫码输入框 */
.code-input-wrap {
  display: flex;
  align-items: center;
}

.code-input {
  flex: 1;
}

.scan-btn {
  width: 80rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  border: none;
  margin: 0;
  padding: 0;
}

.scan-btn::after {
  border: none;
}

.scan-icon {
  font-size: 40rpx;
}

/* 故障类型多选 */
.fault-checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.fault-checkbox-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #F5F7FA;
  border-radius: 30rpx;
  transition: all 0.2s;
}

.fault-checkbox-item.checked {
  background: rgba(25, 118, 210, 0.1);
  color: #1976D2;
}

.fault-checkbox {
  transform: scale(0.7);
  margin-right: 8rpx;
}

.fault-text {
  font-size: 26rpx;
}

/* 详细描述 */
.textarea-container {
  position: relative;
  background: #F9F9F9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 1.6;
}

.char-count {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #CCCCCC;
}

/* 图片上传 */
.image-upload-area {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.upload-btn {
  width: 180rpx;
  height: 180rpx;
  background: #F9F9F9;
  border: 2rpx dashed #E0E0E0;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn:active {
  background: #F0F0F0;
}

.upload-icon-wrap {
  width: 60rpx;
  height: 60rpx;
  background: #FFFFFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.upload-icon {
  font-size: 40rpx;
  color: #1976D2;
  line-height: 1;
  margin-top: -4rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999999;
}

.uploaded-item {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}

.uploaded-img {
  width: 100%;
  height: 100%;
  background: #F5F5F5;
}

.delete-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  border-bottom-left-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-icon {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: -2rpx;
}

/* 位置选择 */
.location-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #F9F9F9;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.location-text {
  font-size: 28rpx;
  color: #333333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.location-icon {
  font-size: 32rpx;
  margin-left: 16rpx;
}

/* 提交区域 */
.submit-area {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.btn-submit {
  background: #1976D2;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  box-shadow: 0 8rpx 20rpx rgba(25, 118, 210, 0.3);
  border: none;
}

.btn-submit::after {
  border: none;
}

.btn-hover {
  background: #1565C0;
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(25, 118, 210, 0.3);
}

.btn-submit[disabled] {
  background: #BDBDBD;
  box-shadow: none;
  color: #FFFFFF;
  opacity: 1;
}

/* 查看模式样式 */
.issue-detail {
  padding-bottom: 40rpx;
}

.section {
  background: var(--card-background);
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid var(--border-color);
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  color: var(--text-secondary);
  flex-shrink: 0;
}

.value {
  flex: 1;
  color: var(--text-primary);
  word-break: break-all;
}

.phone {
  color: var(--primary-color);
  font-weight: 500;
}

.status {
  font-weight: 600;
}

.priority {
  font-weight: 600;
}

.images {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  background: #F5F5F5;
}

.cancel-issue-bar {
  margin-top: 40rpx;
  padding: 0 32rpx;
}

.cancel-issue-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: var(--error-color);
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.cancel-issue-btn:active {
  opacity: 0.9;
}
