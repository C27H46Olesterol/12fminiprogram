/* pages/client/problem/issues/issues.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f7fa;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
}

.worker-header {
  background: linear-gradient(135deg, #1677ff 0%, #4096ff 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(22, 119, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.worker-header.user-mode {
  background: linear-gradient(135deg, #00bfa5 0%, #00d2b4 100%);
}

.header-content {
  display: flex;
  flex-direction: column;
  z-index: 1;
}

.greeting {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.header-bg-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.2;
  position: absolute;
  right: 20rpx;
  bottom: -20rpx;
  transform: rotate(-15deg);
}

.form-container {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #00bfa5;
}

.form-item {
  margin-bottom: 30rpx;
  position: relative;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.required {
  color: #ff4d4f;
  margin-right: 4rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1rpx solid #eee;
}

.scan-icon {
  position: absolute;
  right: 24rpx;
  top: 70rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 10;
}

.textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  border: 1rpx solid #eee;
}

.image-uploader {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.image-wrap {
  width: 140rpx;
  height: 140rpx;
  position: relative;
}

.preview-img {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.remove-btn {
  position: absolute;
  top: -14rpx;
  right: -14rpx;
  width: 36rpx;
  height: 36rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx dashed #d9d9d9;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 22rpx;
}

.tip {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.submit-btn {
  width: 100% !important;
  height: 90rpx;
  background: linear-gradient(135deg, #00bfa5 0%, #00d2b4 100%);
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 191, 165, 0.2);
}