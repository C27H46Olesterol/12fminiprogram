/* 定时弹窗样式 */
.timer-modal-overlay {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}
.timer-modal {
  width: 680rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.timer-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}
.timer-base {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 18rpx;
}
.timer-selected {
  font-size: 36rpx;
  color: #1890ff;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.timer-controls {
  display: flex;
  align-items: center;
  gap: 30rpx;
  margin-bottom: 24rpx;
}
.timer-arrow {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: #f5f5f5;
  display:flex;
  align-items:center;
  justify-content:center;
  font-size: 48rpx;
  color: #333;
}
.timer-step {
  font-size: 28rpx;
  color: #666;
}
.timer-actions {
  display:flex;
  width:100%;
  gap: 20rpx;
}
.timer-actions .action-btn {
  flex: 1;
  height: 86rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}
.timer-actions .cancel {
  background: #f5f5f5;
  color: #333;
}
.timer-actions .confirm {
  background: #1890ff;
  color: #fff;
}