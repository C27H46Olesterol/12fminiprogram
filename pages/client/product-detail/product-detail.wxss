/* pages/client/product-detail/product-detail.wxss */
.container {
  padding: 16rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 产品头部区域 */
.product-header {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.product-image-container {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-right: 24rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-basic-info {
  flex: 1;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
}

.product-code {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.product-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.status-active {
  background-color: #e8f5e8;
  color: #52c41a;
}

.status-inactive {
  background-color: #ffe6e6;
  color: #ff4d4f;
}

/* 区块样式 */
.section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 12rpx;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
}

/* 远程遥控界面 (Updated Style) */
.remote-control-section {
  padding: 32rpx;
  background-color: #f9f9f9;
  min-height: 800rpx;
}

/* 顶部栏 */
.signal-status-bar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 10rpx;
  padding: 0 16rpx;
}

.signal-group {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.6);
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
}

.signal-icon {
  display: flex;
  align-items: flex-end;
  height: 24rpx;
  gap: 4rpx;
}

.s-bar {
  width: 6rpx;
  background-color: #ddd;
  border-radius: 2rpx;
}

.s-bar.b1 { height: 30%; }
.s-bar.b2 { height: 50%; }
.s-bar.b3 { height: 75%; }
.s-bar.b4 { height: 100%; }

.s-bar.active {
  background-color: #52c41a;
}

.signal-text {
  font-size: 20rpx;
  color: #666;
  margin-left: 8rpx;
}

.remote-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 16rpx;
}

.power-btn-wrapper {
  width: 100rpx;
  height: 100rpx;
}

.power-btn {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s;
}

.power-btn .iconfont {
  font-size: 48rpx;
  color: #ff4d4f;
}

.power-btn.active {
  background-color: #00bfa5;
}

.power-btn.active .iconfont {
  color: #fff;
}

.remote-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.more-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-btn .iconfont {
  font-size: 40rpx;
  color: #333;
}

/* 综合显示框 (Consolidated Display) */
.display-screen {
  background-color: #e6f7ff;
  border: 2rpx solid #91d5ff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 48rpx;
  box-shadow: inset 0 0 16rpx rgba(24, 144, 255, 0.15);
}

.display-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.display-row:last-child {
  margin-bottom: 0;
}

.display-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 100rpx;
}

.display-label {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.display-value {
  font-size: 24rpx;
  font-weight: bold;
  color: #333;
}

.display-value.active {
  color: #1890ff;
}

.display-value.error {
  color: #ff4d4f;
}

.display-main {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 0;
  border-top: 1rpx dashed #bae7ff;
  border-bottom: 1rpx dashed #bae7ff;
  margin: 16rpx 0;
  position: relative;
}

.temp-display {
  display: flex;
  align-items: baseline;
  position: relative;
}

.temp-value {
  font-size: 88rpx;
  font-weight: bold;
  color: #333;
  line-height: 1;
}

.temp-unit {
  font-size: 32rpx;
  color: #666;
  margin-left: 8rpx;
}

.temp-label {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 20rpx;
  color: #999;
  white-space: nowrap;
}

.mode-display {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx solid #bae7ff;
}

.mode-text {
  font-size: 26rpx;
  color: #1890ff;
  font-weight: bold;
}

/* 中间控制区域 (Split Layout) */
.control-panel-split {
  display: flex;
  justify-content: space-around;
  margin-bottom: 60rpx;
  padding: 0 40rpx;
}

.control-column {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.control-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.control-pill {
  width: 140rpx;
  height: 360rpx;
  background-color: #fff;
  border-radius: 70rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #f0f0f0;
}

.control-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f9f9f9;
  transition: all 0.2s;
}

.control-btn:active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.control-btn .iconfont {
  font-size: 40rpx;
  color: #666;
  font-weight: bold;
}

.control-btn:active .iconfont {
  color: #1890ff;
}

.control-icon-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-icon-area .iconfont {
  font-size: 48rpx;
  color: #d9d9d9;
}

/* 功能按钮区域 */
.function-area {
  padding: 0 20rpx;
}

.func-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.func-btn-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.func-btn {
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 12rpx;
  transition: all 0.2s;
}

.func-btn.circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.func-btn:active {
  transform: scale(0.95);
}

.func-btn.active {
  background-color: #e6fffa; /* Light Teal */
  border: 2rpx solid #00bfa5;
}

.func-btn .iconfont {
  font-size: 40rpx;
  color: #333;
}

.func-btn.active .iconfont {
  color: #00bfa5;
}

.func-label {
  font-size: 22rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.feedback-btn {
  background-color: #faad14;
  color: #fff;
}

.service-btn {
  background-color: #52c41a;
  color: #fff;
}
