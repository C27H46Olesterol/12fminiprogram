/* pages/client/feedback-success/feedback-success.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1677ff 0%, #42A5F5 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.success-container {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.success-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #52C41A 0%, #73D13D 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(82, 196, 26, 0.3);
}

.success-icon .iconfont {
  font-size: 60rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.success-title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

.feedback-info {
  background: #F8F9FA;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  text-align: left;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  position: relative;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  flex: 1;
  margin-right: 16rpx;
}

.copy-btn {
  font-size: 24rpx;
  color: #1677ff;
  padding: 8rpx 16rpx;
  border: 1rpx solid #1677ff;
  border-radius: 8rpx;
  background: transparent;
}

.tips {
  background: #FFF7E6;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 60rpx;
  text-align: left;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #D46B08;
  margin-bottom: 20rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.tips-content text {
  font-size: 26rpx;
  color: #D46B08;
  line-height: 1.5;
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.action-buttons .btn {
  flex: 1;
  padding: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 16rpx;
  border: none;
  transition: all 0.3s ease;
}

.btn-outline {
  background: transparent;
  color: #1677ff;
  border: 2rpx solid #1677ff;
}

.btn-outline:active {
  background: #F0F5FF;
}

.btn-primary {
  background: #1677ff;
  color: #FFFFFF;
}

.btn-primary:active {
  background: #0958d9;
}

.customer-service {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
}

.service-label {
  font-size: 26rpx;
  color: #666666;
}

.service-phone {
  font-size: 28rpx;
  color: #1677ff;
  font-weight: 500;
  text-decoration: underline;
}








