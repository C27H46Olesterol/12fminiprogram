/* pages/profile/profile.wxss */

.user-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #8e9399;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 48rpx;
  font-weight: 600;
}

.user-name-large {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.user-phone-text {
  font-size: 28rpx;
  color: #999;
}

.menu-list {
  padding: 0 32rpx;
}

.menu-item {
  padding: 32rpx 0;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.divider {
  height: 1rpx;
  background: #f0f0f0;
  width: 100%;
}

.login-btn {
  margin-left: auto;
  background-color: #1a73e8;
  color: #fff;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(26, 115, 232, 0.3);
  transition: background-color 0.2s;
}

.login-btn:active {
  background-color: #1765cc;
}
