/* Pages configuration */
page {
  height: 100vh;
  overflow: hidden;
}

/* 页面容器 */
.page-scroll {
  width: 100%;
  height: 100vh;
  background-color: #f5f7fa;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  padding-bottom: 180rpx; /* 为自定义 tabbar 预留空间 */
}

/* 头部用户信息 - 仿首页风格 */
.user-header {
  background: linear-gradient(135deg, #1677ff 0%, #4096ff 100%);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  box-shadow: 0 8rpx 20rpx rgba(22, 119, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.user-header.user-mode {
  background: linear-gradient(135deg, #00bfa5 0%, #00d2b4 100%);
  box-shadow: 0 8rpx 20rpx rgba(0, 191, 165, 0.2);
}

/* 背景图标装饰 */
.header-bg-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.15;
  position: absolute;
  right: -20rpx;
  bottom: -30rpx;
  transform: rotate(-15deg);
}

.user-info-row {
  display: flex;
  align-items: center;
  z-index: 1;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.info-col {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 40rpx;
  color: #fff;
  font-weight: 700;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

/* 菜单组 */
.menu-group {
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

/* 菜单项 */
.menu-item {
  display: flex;
  align-items: center;
  padding: 34rpx 40rpx;
  position: relative;
  background-color: #fff;
  transition: all 0.2s;
}

/* 列表分割线 (除了最后一项) */
.menu-item:not(:last-child)::after {
  content: " ";
  position: absolute;
  left: 130rpx; /* 图标宽度 + 间距 + padding-left */
  bottom: 0;
  right: 40rpx;
  height: 1rpx;
  background-color: #f0f0f0;
  transform: scaleY(0.5);
}

.menu-item-hover {
  background-color: #fafafa;
}

.menu-icon {
  width: 102rpx;
  height: 102rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
  padding: 16rpx;
  background-color: #f0f7ff; /* 默认淡蓝色背景 */
  border-radius: 20rpx;
}

/* 针对不同菜单项可以有不同的颜色，这里先统一一个舒服的淡色 */
.menu-item:nth-child(2n) .menu-icon { background-color: #fff7e6; }
.menu-item:nth-child(3n) .menu-icon { background-color: #f6ffed; }
.menu-item:nth-child(4n) .menu-icon { background-color: #fff0f6; }

.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 箭头 */
.arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 3rpx solid #cccccc;
  border-right: 3rpx solid #cccccc;
  transform: rotate(45deg);
}

