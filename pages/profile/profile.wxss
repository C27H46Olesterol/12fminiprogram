.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #eee;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
