/* pages/manager/complete-task/complete-task.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 100rpx;
}

.header {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  padding: 40rpx 30rpx;
  color: white;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  display: block;
}

.issue-info {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 44rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  font-size: 28rpx;
  min-width: 160rpx;
}

.value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  flex: 1;
}

.form-section {
  background: white;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.required {
  color: #ff4d4f;
  font-size: 32rpx;
}

.textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 44rpx;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 故障类型选择器 */
.fault-type-selector {
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  background: white;
}

.placeholder-text {
  color: #999;
  font-size: 28rpx;
  line-height: 1;
  transform: translateY(-15rpx);
}

.selected-text {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 1;
  transform: translateY(-2rpx);
}

/* 故障类型弹窗 */
.fault-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.fault-modal.show {
  display: flex;
}

.fault-modal-content {
  background: white;
  width: 640rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.fault-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.fault-modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.fault-modal-close {
  font-size: 40rpx;
  color: #999;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.fault-types-grid {
  padding: 30rpx;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.fault-type-item {
  padding: 30rpx 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  text-align: center;
  border: 2rpx solid transparent;
}

.fault-type-item.special {
  background: #e6f7ff;
  border-color: #1890ff;
}

.fault-type-text {
  font-size: 28rpx;
  color: #333;
}

.fault-type-item.special .fault-type-text {
  color: #1890ff;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  background: white;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.btn-cancel {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.btn-confirm {
  flex: 2;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  border: none;
}

.btn-confirm[disabled] {
  opacity: 0.5;
}

