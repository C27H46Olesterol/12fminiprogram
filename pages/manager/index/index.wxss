/* pages/manager/index/index.wxss */
.manager-home {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 24rpx;
}

/* 用户信息卡片 */
.user-card {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(44, 62, 80, 0.15);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 34rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.user-role {
  font-size: 22rpx;
  color: white;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  align-self: flex-start;
  font-weight: 400;
  backdrop-filter: blur(10rpx);
}

.user-actions {
  display: flex;
  align-items: center;
}

/* 数据概览 */
.overview-section {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  letter-spacing: 0.5rpx;
}

.overview-cards {
  display: flex;
  gap: 12rpx;
}

.overview-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.overview-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.overview-card.pending {
  border-left: 4rpx solid #f39c12;
}

.overview-card.assigned {
  border-left: 4rpx solid #3498db;
}

.overview-card.resolved {
  border-left: 4rpx solid #27ae60;
}

.card-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
  opacity: 0.7;
}

.card-content {
  display: flex;
  flex-direction: column;
}

.card-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 4rpx;
  letter-spacing: 0.3rpx;
}

.card-label {
  font-size: 22rpx;
  color: #7f8c8d;
  font-weight: 400;
}

/* 快捷操作 */
.quick-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.action-item-full {
  grid-column: 1 / -1; /* 占据整行 */
}

.action-item {
  background: white;
  border-radius: 16rpx;
  padding: 28rpx 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.action-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 16rpx;
  margin: 0 auto 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
}

/* 红色徽章数字 */
.badge-count {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  padding: 4rpx 8rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.4);
  border: 2rpx solid white;
  z-index: 10;
}

.pending-icon {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.assigned-icon {
  background: linear-gradient(135deg, #2980b9 0%, #3498db 100%);
}

.resolved-icon {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
}

.statistics-icon {
  background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
}

.feedback-icon {
  background: linear-gradient(135deg, #16a085 0%, #1abc9c 100%);
}

.rating-icon {
  background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
}

.worker-app-icon {
  background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
}

.worker-list-icon {
  background: linear-gradient(135deg, #34495e 0%, #546e7a 100%);
}

.action-icon .icon {
  font-size: 36rpx;
}

.action-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 6rpx;
  letter-spacing: 0.3rpx;
}

.action-desc {
  display: block;
  font-size: 22rpx;
  color: #7f8c8d;
  font-weight: 300;
  line-height: 1.4;
}

/* 紧急问题 */
.urgent-section {
  margin-bottom: 24rpx;
}

.title-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-right: 12rpx;
  letter-spacing: 0.5rpx;
}

.urgent-badge {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #FFFFFF;
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  min-width: 36rpx;
  text-align: center;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.25);
}

.urgent-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.urgent-item {
  background: linear-gradient(90deg, rgba(231, 76, 60, 0.05) 0%, rgba(231, 76, 60, 0.02) 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 3rpx solid #e74c3c;
  border: 1rpx solid rgba(231, 76, 60, 0.15);
  border-left: 4rpx solid #e74c3c;
  transition: all 0.3s ease;
}

.urgent-item:active {
  background: linear-gradient(90deg, rgba(231, 76, 60, 0.08) 0%, rgba(231, 76, 60, 0.04) 100%);
  transform: translateX(4rpx);
  box-shadow: 0 2rpx 12rpx rgba(231, 76, 60, 0.1);
}

.urgent-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.urgent-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
  letter-spacing: 0.3rpx;
}

.urgent-desc {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.6;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: 300;
}

.urgent-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.urgent-time {
  font-size: 22rpx;
  color: #bdc3c7;
  font-weight: 300;
}

.urgent-id {
  font-size: 22rpx;
  color: #95a5a6;
  font-family: 'SF Mono', Monaco, monospace;
  font-weight: 400;
}

/* 最近处理 */
.recent-section {
  margin-bottom: 24rpx;
}

.title-more {
  font-size: 24rpx;
  color: #3498db;
  margin-left: auto;
  font-weight: 400;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.recent-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.recent-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.recent-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.recent-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
  margin-right: 16rpx;
  letter-spacing: 0.3rpx;
}

.recent-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recent-assignee {
  font-size: 24rpx;
  color: #7f8c8d;
  font-weight: 400;
}

.recent-time {
  font-size: 22rpx;
  color: #bdc3c7;
  font-weight: 300;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: white;
  border-radius: 16rpx;
  border: 1rpx solid #f0f0f0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 26rpx;
  text-align: center;
  color: #95a5a6;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 优先级标签 */
.priority-tag {
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.priority-high {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

.priority-urgent {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

/* 状态标签 */
.status-tag {
  padding: 6rpx 14rpx;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.status-pending {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.status-assigned {
  background: linear-gradient(135deg, #2980b9 0%, #3498db 100%);
}

.status-processing {
  background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
}

.status-resolved {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
}

/* 按钮样式 */
.btn {
  border-radius: 12rpx;
  font-weight: 500;
  letter-spacing: 0.3rpx;
  transition: all 0.3s ease;
}

.btn-outline {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

.btn-outline:active {
  background: rgba(255, 255, 255, 0.25);
  border-color: rgba(255, 255, 255, 0.5);
}

.btn-small {
  padding: 10rpx 24rpx;
  font-size: 24rpx;
  height: auto;
  line-height: 1.5;
}

