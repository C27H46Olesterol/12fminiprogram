.btn-start {
  flex: 1;
  background: linear-gradient(135deg, #2196f3 0%, #42a5f5 100%);
  color: white;
  border: none;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
  transition: all 0.3s ease;
