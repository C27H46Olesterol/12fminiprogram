/* pages/manager/pending/pending.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f9fa;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  padding: 32rpx 32rpx 24rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
}

.count {
  font-size: 24rpx;
  opacity: 0.85;
  font-weight: 300;
}

.header-actions {
  display: flex;
  gap: 12rpx;
}

.btn-edit-mode, .btn-cancel, .btn-delete-batch {
  background: rgba(255, 255, 255, 0.15);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 20rpx;
  font-weight: 400;
  backdrop-filter: blur(10rpx);
}

.btn-delete-batch {
  background: rgba(231, 76, 60, 0.9);
  border-color: rgba(231, 76, 60, 1);
}

/* 筛选类型按钮 */
.filter-tabs {
  display: flex;
  background: white;
  padding: 24rpx 32rpx 20rpx;
  justify-content: space-between;
  gap: 16rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: relative;
  z-index: 10;
  flex-shrink: 0;
}

.filter-tab {
  flex: 1;
  padding: 16rpx 12rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #7f8c8d;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 2rpx solid #e8e8e8;
  position: relative;
  text-align: center;
  line-height: 1.4;
}

.filter-tab.active {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  color: white;
  border-color: #2c3e50;
  box-shadow: 0 4rpx 16rpx rgba(44, 62, 80, 0.25);
  font-weight: 600;
}

.filter-tab:active {
  transform: scale(0.96);
}

/* 标签徽章 */
.tab-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  background: linear-gradient(135deg, #ff4757 0%, #ff3838 100%);
  color: white;
  font-size: 20rpx;
  font-weight: 600;
  border-radius: 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.4);
  border: 2rpx solid white;
  z-index: 1;
}

/* 筛选器（分类和优先级） */
.filter-section {
  display: flex;
  background: white;
  padding: 16rpx 32rpx 20rpx;
  justify-content: space-between;
  gap: 24rpx;
  border-bottom: 1rpx solid #e8e8e8;
  position: relative;
  z-index: 5;
  flex-shrink: 0;
}

.filter-item {
  flex: 0 0 calc(50% - 12rpx);
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e8e8e8;
  transition: all 0.3s ease;
}

.filter-item:active {
  background: #ecf0f1;
  border-color: #bdc3c7;
}

.filter-label {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-right: 10rpx;
  font-weight: 500;
}

.filter-value {
  font-size: 26rpx;
  color: #2c3e50;
  flex: 1;
  font-weight: 600;
}

/* 问题列表 */
.issues-list {
  flex: 1;
  padding: 16rpx 32rpx;
}

.issue-card {
  background: white;
  border-radius: 16rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f0f0f0;
  display: flex;
  align-items: flex-start;
  transition: all 0.3s ease;
}

.issue-card:active {
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.08);
  transform: translateY(-2rpx);
}

.issue-card.edit-mode {
  padding: 24rpx 28rpx;
}

.checkbox-wrapper {
  padding-right: 20rpx;
  padding-top: 5rpx;
  display: flex;
  align-items: center;
}

/* 自定义复选框 */
.custom-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #bdc3c7;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  transition: all 0.3s ease;
}

.custom-checkbox.checked {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  border-color: #2c3e50;
  box-shadow: 0 2rpx 8rpx rgba(44, 62, 80, 0.2);
}

.checkmark {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}

.issue-content {
  flex: 1;
}

.btn-delete-single {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: white;
  border: none;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(231, 76, 60, 0.2);
}

/* 问题头部 */
.issue-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.issue-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  flex: 1;
  margin-right: 16rpx;
  letter-spacing: 0.3rpx;
  line-height: 1.4;
}

.priority-badge {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  color: white;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.priority-urgent {
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
}

.priority-high {
  background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
}

.priority-medium {
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
}

.priority-low {
  background: linear-gradient(135deg, #95a5a6 0%, #7f8c8d 100%);
}

/* 问题描述 */
.issue-description {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-weight: 300;
}

/* 问题信息 */
.issue-info {
  display: flex;
  margin-bottom: 14rpx;
  background: #f8f9fa;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
}

.info-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 24rpx;
  color: #95a5a6;
  margin-right: 8rpx;
  font-weight: 400;
}

.info-value {
  font-size: 24rpx;
  color: #34495e;
  font-weight: 500;
}

/* 报告人信�?*/
.reporter-info {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-top: 1rpx solid #ecf0f1;
  margin-bottom: 16rpx;
}

.reporter-label {
  font-size: 24rpx;
  color: #95a5a6;
  margin-right: 10rpx;
  font-weight: 400;
}

.reporter-name {
  font-size: 24rpx;
  color: #34495e;
  margin-right: 16rpx;
  font-weight: 500;
}

.reporter-phone {
  font-size: 24rpx;
  color: #3498db;
  margin-right: 20rpx;
  font-weight: 400;
}

.report-time {
  font-size: 22rpx;
  color: #bdc3c7;
  margin-left: auto;
  font-weight: 300;
}

/* 维修工信息 */
.worker-info {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  border-top: 1rpx solid #ecf0f1;
  margin-bottom: 16rpx;
}

.worker-label {
  font-size: 24rpx;
  color: #95a5a6;
  margin-right: 10rpx;
  font-weight: 400;
}

.worker-name {
  font-size: 24rpx;
  color: #27ae60;
  margin-right: 16rpx;
  font-weight: 600;
}

.worker-phone {
  font-size: 24rpx;
  color: #3498db;
  margin-right: 20rpx;
  font-weight: 400;
}

.assign-time {
  font-size: 22rpx;
  color: #bdc3c7;
  margin-left: auto;
  font-weight: 300;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 16rpx;
}

.btn-assign {
  flex: 1;
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  color: white;
  border: none;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  box-shadow: 0 4rpx 12rpx rgba(44, 62, 80, 0.2);
  transition: all 0.3s ease;
}

.btn-assign:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(44, 62, 80, 0.2);
}

.btn-detail {
  flex: 1;
  background: white;
  color: #2c3e50;
  border: 2rpx solid #ecf0f1;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  transition: all 0.3s ease;
}

.btn-detail:active {
  background: #f8f9fa;
  border-color: #bdc3c7;
}

/* 空状�?*/
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #95a5a6;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* 加载状�?*/
.loading-state {
  text-align: center;
  padding: 48rpx;
  font-size: 28rpx;
  color: #95a5a6;
  font-weight: 300;
}

.load-more {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #bdc3c7;
  font-weight: 300;
}

.no-more {
  text-align: center;
  padding: 32rpx;
  font-size: 26rpx;
  color: #d5d8dc;
  font-weight: 300;
}

/* 弹窗样式 */
.modal-content {
  padding: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.picker {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  min-height: 150rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

/* 分配弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(44, 62, 80, 0.6);
  backdrop-filter: blur(4rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal .modal-content {
  background: white;
  width: 600rpx;
  border-radius: 24rpx;
  overflow: hidden;
  padding: 0;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #ecf0f1;
  background: #f8f9fa;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  letter-spacing: 0.5rpx;
}

.modal-close {
  font-size: 40rpx;
  color: #95a5a6;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.modal-close:active {
  color: #7f8c8d;
  transform: scale(0.9);
}

.modal-body {
  padding: 32rpx;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 32rpx;
  background: #f8f9fa;
}

.modal-footer .btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  transition: all 0.3s ease;
}

.modal-footer .btn.primary {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(44, 62, 80, 0.2);
}

.modal-footer .btn.primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(44, 62, 80, 0.2);
}

.modal-footer .btn.secondary {
  background: white;
  color: #7f8c8d;
  border: 2rpx solid #ecf0f1;
}

.modal-footer .btn.secondary:active {
  background: #ecf0f1;
}

/* 搜索框样�?*/
.search-box {
  position: relative;
  margin-bottom: 24rpx;
  padding: 0;
}

.search-input {
  width: 100%;
  height: 76rpx;
  padding: 0 80rpx 0 32rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #ecf0f1;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.search-input:focus {
  background-color: white;
  border-color: #bdc3c7;
}

.search-placeholder {
  color: #bdc3c7;
}

.search-icon {
  position: absolute;
  right: 28rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #95a5a6;
}

/* 维修工列表样�?*/
.worker-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.worker-item {
  padding: 28rpx;
  border-bottom: 1rpx solid #ecf0f1;
  transition: all 0.3s ease;
  border-radius: 8rpx;
  margin-bottom: 4rpx;
}

.worker-item:active {
  background-color: #f8f9fa;
}

.worker-item.selected {
  background: linear-gradient(90deg, rgba(44, 62, 80, 0.05) 0%, rgba(44, 62, 80, 0.02) 100%);
  border-left: 3rpx solid #2c3e50;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.worker-info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.worker-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  letter-spacing: 0.3rpx;
}

.worker-rating {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.rating-star {
  color: #f39c12;
  font-size: 28rpx;
}

.rating-value {
  color: #2c3e50;
  font-size: 28rpx;
  font-weight: 600;
}

.rating-count {
  color: #95a5a6;
  font-size: 24rpx;
  font-weight: 300;
}

.no-rating {
  color: #bdc3c7;
  font-size: 24rpx;
  font-weight: 300;
}

.worker-phone {
  color: #7f8c8d;
  font-size: 26rpx;
  font-weight: 400;
}

/* 无搜索结果样�?*/
.no-result {
  padding: 100rpx 0;
  text-align: center;
}

.no-result-text {
  color: #95a5a6;
  font-size: 28rpx;
  font-weight: 300;
  letter-spacing: 0.5rpx;
}

/* ============ 位置功能样式 ============ */

/* 维修工距离信�?*/
.worker-distance {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  padding: 8rpx 16rpx;
  background: linear-gradient(90deg, rgba(39, 174, 96, 0.08) 0%, rgba(39, 174, 96, 0.04) 100%);
  border-radius: 8rpx;
  width: fit-content;
}

.distance-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.distance-text {
  font-size: 24rpx;
  color: #27ae60;
  font-weight: 500;
}

/* 维修工地址信息 */
.worker-address {
  margin-top: 10rpx;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.address-text {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.5;
  font-weight: 400;
}

/* ============ 问题编号样式 ============ */

.issue-number {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 8rpx 16rpx;
  background: #f0f4ff;
  border-radius: 8rpx;
  border-left: 4rpx solid #2c3e50;
}

.number-label {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-right: 8rpx;
  font-weight: 500;
}

.number-value {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 600;
  font-family: 'Courier New', monospace;
  letter-spacing: 0.5rpx;
}

/* ============ 新增按钮样式 ============ */

