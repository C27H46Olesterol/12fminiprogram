.btn-send-parts {
  flex: 1;
  background: linear-gradient(135deg, #9c27b0 0%, #ba68c8 100%);
  color: white;
  border: none;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  box-shadow: 0 4rpx 12rpx rgba(156, 39, 176, 0.3);
  transition: all 0.3s ease;
}

.btn-send-parts:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(156, 39, 176, 0.3);
}

/* 发出返件按钮 */
.btn-return-parts {
  flex: 1;
  background: linear-gradient(135deg, #00bcd4 0%, #00acc1 100%);
  color: white;
  border: none;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 188, 212, 0.3);
  transition: all 0.3s ease;
}

.btn-return-parts:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 188, 212, 0.3);
}

/* 完成任务按钮 */
.btn-complete {
  flex: 1;
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
  color: white;
  border: none;
  font-size: 26rpx;
  height: 68rpx;
  line-height: 68rpx;
  border-radius: 12rpx;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.btn-complete:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(76, 175, 80, 0.3);
}
