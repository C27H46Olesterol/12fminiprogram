/* pages/manager/statistics/statistics.wxss */
.statistics-page {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 今日统计卡片 */
.today-stats {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stats-card {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.stats-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.stats-icon.new {
  background: #fff7e6;
}

.stats-icon.resolved {
  background: #f6ffed;
}

.stats-icon.pending {
  background: #fff1f0;
}

.stats-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.stats-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #999;
}

/* 总体统计 */
.overall-stats {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.overall-cards {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.overall-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.overall-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.overall-label {
  font-size: 22rpx;
  color: #666;
}

/* 状态统计 */
.status-stats {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.status-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-item {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.status-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.status-name {
  font-size: 28rpx;
  color: #333;
}

.status-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
}

.status-bar {
  height: 8rpx;
  background: #e8e8e8;
  border-radius: 4rpx;
  overflow: hidden;
}

.status-bar-fill {
  height: 100%;
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 优先级统计 */
.priority-stats {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.priority-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.priority-card {
  padding: 24rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.priority-card.urgent {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
}

.priority-card.high {
  background: linear-gradient(135deg, #ffa502 0%, #ff7f00 100%);
}

.priority-card.medium {
  background: linear-gradient(135deg, #4b7bec 0%, #3867d6 100%);
}

.priority-card.low {
  background: linear-gradient(135deg, #26de81 0%, #20bf6b 100%);
}

.priority-count {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.priority-label {
  font-size: 24rpx;
  color: white;
}

/* 类别统计 */
.category-stats {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.category-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.category-item {
  padding: 16rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.category-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.category-name {
  font-size: 28rpx;
  color: #333;
}

.category-count {
  font-size: 28rpx;
  font-weight: bold;
  color: #1890ff;
}

.category-bar {
  height: 8rpx;
  background: #e8e8e8;
  border-radius: 4rpx;
  overflow: hidden;
}

.category-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #1890ff, #36cfc9);
  border-radius: 4rpx;
  transition: width 0.3s;
}

/* 维修工统计 */
.worker-stats {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.worker-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.worker-item {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.worker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.worker-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.worker-satisfaction {
  font-size: 26rpx;
  color: #ff9800;
}

.worker-stats-row {
  display: flex;
  gap: 24rpx;
}

.worker-stat {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  font-size: 28rpx;
  color: #999;
}













