/* pages/manager/resolved/resolved.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.count {
  font-size: 28rpx;
  opacity: 0.9;
}

.header-actions {
  display: flex;
  gap: 15rpx;
}

.btn-edit-mode, .btn-cancel, .btn-delete-batch {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  font-size: 26rpx;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
}

.btn-delete-batch {
  background: rgba(255, 76, 76, 0.9);
  border-color: rgba(255, 76, 76, 1);
}

/* 筛选器 */
.filter-section {
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.filter-item:last-child {
  margin-right: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.filter-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 问题列表 */
.issues-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.issue-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
}

.issue-card.edit-mode {
  padding: 20rpx 30rpx;
}

.checkbox-wrapper {
  padding-right: 20rpx;
  padding-top: 5rpx;
  display: flex;
  align-items: center;
}

/* 自定义复选框 */
.custom-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  transition: all 0.3s;
}

.custom-checkbox.checked {
  background-color: #667eea;
  border-color: #667eea;
}

.checkmark {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.issue-content {
  flex: 1;
}

.btn-delete-single {
  background: #ff4d4f;
  color: white;
  border: none;
  font-size: 24rpx;
}

/* 问题头部 */
.issue-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.issue-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  background: #4caf50;
}

/* 问题编号 */
.issue-id {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 10rpx 15rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.id-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.id-value {
  font-size: 26rpx;
  color: #667eea;
  font-weight: bold;
  font-family: 'Courier New', monospace;
}

/* 问题描述 */
.issue-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 解决方案 */
.solution-section {
  background: #f0f9ff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  border-left: 4rpx solid #4caf50;
}

.solution-label {
  font-size: 26rpx;
  color: #4caf50;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.solution-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 问题信息 */
.issue-info {
  display: flex;
  margin-bottom: 15rpx;
}

.info-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.info-value {
  font-size: 26rpx;
  color: #666;
}

/* 维修工信息 */
.worker-info {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}

.worker-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.worker-name {
  font-size: 26rpx;
  color: #4caf50;
  font-weight: bold;
}

/* 时间信息 */
.time-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.time-item {
  display: flex;
  align-items: center;
}

.time-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.time-value {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 20rpx;
}

.btn-detail {
  flex: 1;
  background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
  color: white;
  border: none;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

.btn-images {
  flex: 1;
  background: white;
  color: #4caf50;
  border: 2rpx solid #4caf50;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #ccc;
}



