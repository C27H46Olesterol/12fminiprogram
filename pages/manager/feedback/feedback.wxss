/* pages/manager/feedback/feedback.wxss */
.feedback-container {
  min-height: 100vh;
  background: var(--background-color);
  padding: 12rpx 20rpx;
}

/* 当显示备用导航栏时调整padding */
.feedback-container.has-backup-nav {
  padding-top: 108rpx;
}

/* 备用导航栏样式 */
.backup-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  z-index: 1000;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.nav-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-text {
  font-size: 28rpx;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
}

.nav-center {
  flex: 1;
  text-align: center;
}

/* 表单样式 */
.feedback-form {
  max-width: 800rpx;
  margin: 0 auto;
  padding-bottom: 10rpx;
}

.form-section {
  background: var(--card-background);
  border-radius: 20rpx;
  padding: 18rpx 18rpx;
  margin-bottom: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  transition: all 0.3s ease;
}

.form-section:hover {
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.08);
}

/* 移除section-title，因为不再需要 */

.form-group {
  margin-bottom: 18rpx;
}

.form-label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  -webkit-font-smoothing: antialiased;
}

.label-tag {
  font-size: 22rpx;
  padding: 3rpx 10rpx;
  border-radius: 8rpx;
  font-weight: 500;
  -webkit-font-smoothing: antialiased;
}

.label-tag.required {
  background: #FFE5E5;
  color: #ff3b30;
}

.label-tag.optional {
  background: #E8F5E9;
  color: #4CAF50;
}

.form-input {
  width: 100%;
  height: 70rpx;
  padding: 0 18rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 14rpx;
  font-size: 28rpx;
  background: #FAFAFA;
  transition: all 0.3s ease;
  line-height: 70rpx;
  -webkit-font-smoothing: antialiased;
}

.form-input:focus {
  border-color: var(--primary-color);
  background: #FFFFFF;
  box-shadow: 0 0 0 8rpx rgba(25, 118, 210, 0.08);
}

/* 产品类型切换标签 */
.product-type-tabs {
  display: flex;
  gap: 16rpx;
  margin-bottom: 14rpx;
}

.type-tab {
  flex: 1;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: var(--text-secondary);
  transition: all 0.3s ease;
  font-weight: 500;
  border: 2rpx solid transparent;
}

.type-tab.active {
  background: linear-gradient(135deg, var(--primary-color) 0%, #1565C0 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(25, 118, 210, 0.3);
  font-weight: 600;
}

.type-tab:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 产品型号列表 */
.product-model-list {
  max-height: 420rpx;
  overflow-y: auto;
  border: 2rpx solid #E0E0E0;
  border-radius: 14rpx;
  background: #FAFAFA;
}

.product-model-item {
  display: flex;
  align-items: center;
  padding: 16rpx;
  border-bottom: 1rpx solid #E8E8E8;
  transition: all 0.3s ease;
  background: #FFFFFF;
}

.product-model-item:last-child {
  border-bottom: none;
}

.product-model-item.selected {
  background: rgba(25, 118, 210, 0.05);
  border-left: 4rpx solid var(--primary-color);
}

.product-model-item:active {
  background: rgba(25, 118, 210, 0.1);
}

.product-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  border: 1rpx solid #E0E0E0;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: #F8F8F8;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.product-name {
  font-size: 24rpx;
  color: var(--text-secondary);
  line-height: 1.3;
  -webkit-font-smoothing: antialiased;
}

.product-model {
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 600;
  -webkit-font-smoothing: antialiased;
}

.product-check {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.check-icon {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1;
}

.textarea-container {
  position: relative;
}

.form-textarea {
  width: 100%;
  min-height: 120rpx;
  max-height: 120rpx;
  padding: 16rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 14rpx;
  font-size: 28rpx;
  background: #FAFAFA;
  resize: vertical;
  transition: all 0.3s ease;
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
}

.form-textarea:focus {
  border-color: var(--primary-color);
  background: #FFFFFF;
  box-shadow: 0 0 0 8rpx rgba(25, 118, 210, 0.08);
}

/* 移除清除按钮样式 */


.char-count {
  text-align: right;
  font-size: 22rpx;
  color: var(--text-disabled);
  margin-top: 4rpx;
  -webkit-font-smoothing: antialiased;
}

/* 移除不需要的样式 */

/* 图片上传 */
.image-upload {
  margin-top: 0;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.image-item {
  position: relative;
  width: 130rpx;
  height: 130rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}

.image-item:active {
  opacity: 0.8;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  image-rendering: -webkit-optimize-contrast;
}

.image-delete {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.image-delete:active {
  background: rgba(255, 59, 48, 0.9);
  transform: scale(1.1);
}

.delete-icon {
  color: #FFFFFF;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1;
}

.image-upload-btn {
  width: 130rpx;
  height: 130rpx;
  border: 2rpx dashed #BDBDBD;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #F5F5F5 0%, #FAFAFA 100%);
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.image-upload-btn:active {
  border-color: var(--primary-color);
  background: linear-gradient(135deg, rgba(25, 118, 210, 0.05) 0%, rgba(25, 118, 210, 0.1) 100%);
  transform: scale(0.95);
}

.upload-icon {
  font-size: 36rpx;
  color: var(--primary-color);
  margin-bottom: 3rpx;
}

.upload-text {
  font-size: 20rpx;
  color: var(--text-secondary);
  font-weight: 500;
  -webkit-font-smoothing: antialiased;
}

.upload-tip {
  font-size: 22rpx;
  color: var(--text-disabled);
  text-align: left;
  line-height: 1.4;
  -webkit-font-smoothing: antialiased;
}

/* 表单操作 */
.form-actions {
  margin-top: 16rpx;
  padding: 0 20rpx 16rpx;
}

.submit-btn {
  width: 100%;
  padding: 22rpx;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 16rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, #1565C0 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 24rpx rgba(25, 118, 210, 0.3);
  transition: all 0.3s ease;
  border: none;
  -webkit-font-smoothing: antialiased;
}

.submit-btn:not([disabled]):active {
  background: linear-gradient(135deg, #1565C0 0%, #0D47A1 100%);
  opacity: 0.9;
  box-shadow: 0 4rpx 16rpx rgba(25, 118, 210, 0.4);
}

.submit-btn[disabled] {
  background: linear-gradient(135deg, #BDBDBD 0%, #9E9E9E 100%);
  color: #FFFFFF;
  box-shadow: none;
  opacity: 0.6;
}

/* 详情页面样式 */
.feedback-detail {
  max-width: 800rpx;
  margin: 0 auto;
}

.detail-section {
  background: var(--card-background);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow);
}

.detail-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: var(--text-secondary);
  min-width: 160rpx;
}

.detail-value {
  font-size: 28rpx;
  color: var(--text-primary);
  text-align: right;
  flex: 1;
}

.detail-description {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
  padding: 20rpx 0;
}

/* 详情图片 */
.detail-images {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.detail-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  border: 2rpx solid var(--border-color);
}

/* 进度时间线 */
.progress-timeline {
  margin-top: 20rpx;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  position: relative;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 20rpx;
  top: 40rpx;
  bottom: -30rpx;
  width: 2rpx;
  background: var(--border-color);
}

.timeline-dot {
  width: 40rpx;
  height: 40rpx;
  background: var(--primary-color);
  border-radius: 50%;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.timeline-content {
  flex: 1;
  padding-top: 8rpx;
}

.timeline-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.timeline-desc {
  display: block;
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.timeline-time {
  display: block;
  font-size: 22rpx;
  color: var(--text-disabled);
}

