/* pages/manager/worker-applications/worker-applications.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding-bottom: 40rpx;
}

/* 头部 */
.header {
  padding: 60rpx 40rpx 30rpx;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 筛选标签 */
.filter-tabs {
  display: flex;
  background: rgba(255, 255, 255, 0.95);
  margin: 0 30rpx 30rpx;
  border-radius: 16rpx;
  padding: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-weight: bold;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: 8rpx;
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  padding: 0 8rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  border-radius: 16rpx;
  text-align: center;
}

.badge.pending {
  background: #ff9800;
}

/* 申请列表 */
.applications-list {
  padding: 0 30rpx;
}

.application-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 申请头部 */
.app-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.app-info {
  flex: 1;
}

.app-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.app-phone {
  font-size: 26rpx;
  color: #666;
}

.app-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.app-status.status-pending {
  background: #fff7e6;
  color: #fa8c16;
}

.app-status.status-approved {
  background: #f6ffed;
  color: #52c41a;
}

.app-status.status-rejected {
  background: #fff1f0;
  color: #ff4d4f;
}

/* 详细信息 */
.app-details {
  margin-bottom: 24rpx;
}

.detail-item {
  display: flex;
  line-height: 48rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.detail-item .label {
  color: #999;
  min-width: 160rpx;
}

.detail-item .value {
  flex: 1;
  color: #333;
}

/* 门头照片 */
.app-image {
  margin-bottom: 24rpx;
}

.image-label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.store-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  display: block;
}

/* 操作按钮 */
.app-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 24rpx;
}

.app-actions .btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-reject {
  background: #fff;
  color: #ff4d4f;
  border: 2rpx solid #ff4d4f;
}

.btn-reject:active {
  background: #fff1f0;
}

.btn-approve {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
}

.btn-approve:active {
  opacity: 0.8;
}

.btn::after {
  border: none;
}

/* 已处理信息 */
.app-result {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 2rpx solid #f0f0f0;
}

.result-info {
  display: flex;
  line-height: 44rpx;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.result-label {
  color: #999;
  min-width: 140rpx;
}

.result-value {
  flex: 1;
  color: #666;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载更多 */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

