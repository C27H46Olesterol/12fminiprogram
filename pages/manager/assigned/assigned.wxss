/* pages/manager/assigned/assigned.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  padding: 40rpx 30rpx 30rpx;
  color: white;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.count {
  font-size: 28rpx;
  opacity: 0.9;
}

.header-actions {
  display: flex;
  gap: 15rpx;
}

.btn-edit-mode, .btn-cancel, .btn-delete-batch {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  font-size: 26rpx;
  padding: 10rpx 25rpx;
  border-radius: 30rpx;
}

.btn-delete-batch {
  background: rgba(255, 76, 76, 0.9);
  border-color: rgba(255, 76, 76, 1);
}

/* 筛选器 */
.filter-section {
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.filter-item:last-child {
  margin-right: 0;
}

.filter-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.filter-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 任务列表 */
.issues-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.issue-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
}

.issue-card.edit-mode {
  padding: 20rpx 30rpx;
}

.checkbox-wrapper {
  padding-right: 20rpx;
  padding-top: 5rpx;
  display: flex;
  align-items: center;
}

/* 自定义复选框 */
.custom-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 3rpx solid #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  transition: all 0.3s;
}

.custom-checkbox.checked {
  background-color: #667eea;
  border-color: #667eea;
}

.checkmark {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 1;
}

.issue-content {
  flex: 1;
}

.btn-delete-single {
  background: #ff4d4f;
  color: white;
  border: none;
  font-size: 24rpx;
}

/* 任务头部 */
.issue-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.issue-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
}

.status-assigned {
  background: #2196f3;
}

.status-processing {
  background: #ff9800;
}

.status-parts_request {
  background: #9c27b0;
}

.status-parts_sent {
  background: #00bcd4;
}

.status-parts_return_approval {
  background: #ff5722;
  animation: blink 1.5s ease-in-out infinite;
}

@keyframes blink {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

.status-parts_received {
  background: #4caf50;
}

/* 问题描述 */
.issue-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 任务信息 */
.issue-info {
  display: flex;
  margin-bottom: 15rpx;
}

.info-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.info-value {
  font-size: 26rpx;
  color: #666;
}

.priority-urgent {
  color: #f44336;
  font-weight: bold;
}

.priority-high {
  color: #ff9800;
  font-weight: bold;
}

.priority-medium {
  color: #2196f3;
}

.priority-low {
  color: #9e9e9e;
}

/* 维修工信息 */
.worker-info {
  display: flex;
  align-items: center;
  padding: 15rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 10rpx;
}

.worker-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.worker-name {
  font-size: 26rpx;
  color: #11998e;
  font-weight: bold;
  margin-right: 15rpx;
}

.worker-phone {
  font-size: 26rpx;
  color: #1890ff;
  margin-right: 20rpx;
}

.assign-time {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

/* 设备信息 */
.device-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.device-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 10rpx;
}

.device-name {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 20rpx;
}

.btn-start {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

.btn-detail {
  flex: 1;
  background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
  color: white;
  border: none;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

.btn-reminder {
  flex: 1;
  background: white;
  color: #11998e;
  border: 2rpx solid #11998e;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

.btn-approve {
  flex: 1;
  background: linear-gradient(135deg, #4caf50 0%, #66bb6a 100%);
  color: white;
  border: none;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

.btn-reject {
  flex: 1;
  background: linear-gradient(135deg, #f44336 0%, #e57373 100%);
  color: white;
  border: none;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

.btn-approval {
  flex: 1;
  background: linear-gradient(135deg, #9c27b0 0%, #ba68c8 100%);
  color: white;
  border: none;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #ccc;
}



