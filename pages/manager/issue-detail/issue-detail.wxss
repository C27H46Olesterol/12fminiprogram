/* pages/manager/issue-detail/issue-detail.wxss */

.issue-detail-page {
  padding-bottom: 180rpx; /* 底部操作栏空间 */
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
}

/* 卡片通用样式 */
.card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.card-header {
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  width: 160rpx;
  color: #999;
  font-size: 28rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  font-size: 28rpx;
  flex: 1;
}

.phone-link {
  color: #1677ff;
}

.priority-tag {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border: 1rpx solid;
  border-radius: 8rpx;
}

/* 图片网格 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.detail-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

/* 状态历史时间轴 */
.history-timeline {
  padding-left: 20rpx;
}

.timeline-item {
  position: relative;
  padding-left: 40rpx;
  padding-bottom: 40rpx;
  border-left: 2rpx solid #e0e0e0;
}

.timeline-item:last-child {
  border-left: none;
  padding-bottom: 0;
}

.timeline-dot {
  position: absolute;
  left: -9rpx;
  top: 10rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #1677ff;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx #1677ff;
}

.history-status {
  font-weight: 600;
  color: #333;
}

.history-time {
  font-size: 24rpx;
}

.history-remark {
  background: #f9f9f9;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #666;
}

/* 底部操作栏 */
.bottom-action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.gap-20 {
  gap: 20rpx;
}

.flex-1 {
  flex: 1;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 900;
}

.modal-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  z-index: 901;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
}

.close-icon {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.modal-content {
  padding: 30rpx;
  max-height: 600rpx;
  overflow-y: auto;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.worker-item {
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.worker-item.selected {
  border-color: #1677ff;
  background: #e6f7ff;
}

.picker-item {
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}