/* pages/manager/personnel-manager/personnel-manager.wxss */
.worker-list-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
  padding-bottom: 20rpx;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 30rpx 30rpx;
  color: white;
}

.page-title {
  display: block;
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 筛选区域 */
.filter-section {
  background: white;
  margin: 15rpx 20rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 地区选择器 */
.region-selector {
  margin-bottom: 15rpx;
}

.picker-display-full {
  display: flex;
  align-items: center;
  padding: 18rpx 24rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  border-radius: 12rpx;
  border: 2rpx solid #dee2e6;
  transition: all 0.3s;
}

.picker-display-full:active {
  background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
  transform: scale(0.98);
}

.picker-label-full {
  font-size: 28rpx;
  color: #495057;
  font-weight: 600;
  margin-right: 16rpx;
  white-space: nowrap;
}

.picker-value-full {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.region-text {
  flex: 1;
  font-size: 28rpx;
  color: #212529;
  font-weight: 500;
}

.picker-arrow {
  font-size: 24rpx;
  color: #adb5bd;
  margin-left: 12rpx;
}

/* 搜索框 */
.search-box {
  position: relative;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 40rpx;
  border: 2rpx solid #e9ecef;
  overflow: hidden;
  transition: all 0.3s;
}

.search-box:focus-within {
  border-color: #667eea;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.search-icon-left {
  padding-left: 30rpx;
  font-size: 32rpx;
  color: #adb5bd;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  background: transparent;
  border: none;
  font-size: 28rpx;
  color: #212529;
}

.search-placeholder {
  color: #adb5bd;
}

.search-clear {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  background: #dee2e6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: white;
  opacity: 0;
  transform: scale(0);
  transition: all 0.3s;
}

.search-clear.show {
  opacity: 1;
  transform: scale(1);
}

.search-clear:active {
  background: #adb5bd;
  transform: scale(0.9);
}

/* 快捷地区标签 */
.quick-tags {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.quick-tags-label {
  font-size: 26rpx;
  color: #6c757d;
  margin-right: 16rpx;
  white-space: nowrap;
}

.tags-scroll {
  flex: 1;
  white-space: nowrap;
}

.tag-list {
  display: inline-flex;
  gap: 16rpx;
  padding: 4rpx 0;
}

.tag-item {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #f8f9fa;
  border: 2rpx solid #dee2e6;
  border-radius: 30rpx;
  transition: all 0.3s;
  white-space: nowrap;
}

.tag-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
}

.tag-item:active {
  transform: scale(0.95);
}

.tag-text {
  font-size: 26rpx;
  color: #495057;
}

.tag-item.active .tag-text {
  color: white;
  font-weight: 500;
}

/* 筛选操作 */
.filter-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 2rpx solid #f1f3f5;
}

.btn-reset {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 26rpx;
}

.result-count {
  font-size: 26rpx;
  color: #6c757d;
}

/* 维修工列表 */
.worker-list {
  padding: 0 20rpx;
}

.worker-card {
  background: white;
  margin-bottom: 15rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.worker-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

/* 维修工头部 */
.worker-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.worker-avatar {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.avatar-icon {
  font-size: 40rpx;
}

.worker-info {
  flex: 1;
}

.worker-name-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.worker-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #212529;
}

.worker-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 6rpx 16rpx;
  background: #d4edda;
  border-radius: 20rpx;
}

.badge-dot {
  font-size: 16rpx;
  color: #28a745;
}

.badge-text {
  font-size: 22rpx;
  color: #28a745;
}

.worker-phone {
  font-size: 26rpx;
  color: #6c757d;
}

/* 地区信息 */
.worker-location {
  margin-bottom: 12rpx;
}

.location-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 16rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.location-icon {
  font-size: 28rpx;
}

.location-text {
  font-size: 28rpx;
  color: #495057;
}

/* 门店信息 */
.worker-store {
  margin-bottom: 12rpx;
  padding: 12rpx 16rpx;
  background: #fff3cd;
  border-radius: 10rpx;
  border-left: 4rpx solid #ffc107;
}

.store-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 6rpx;
}

.store-item:last-child {
  margin-bottom: 0;
}

.store-label {
  font-size: 26rpx;
  color: #856404;
  margin-right: 12rpx;
  white-space: nowrap;
}

.store-value {
  flex: 1;
  font-size: 26rpx;
  color: #856404;
}

/* 统计信息 */
.worker-stats {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  margin-bottom: 12rpx;
  border-top: 2rpx solid #f1f3f5;
  border-bottom: 2rpx solid #f1f3f5;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-number {
  font-size: 30rpx;
  font-weight: bold;
  color: #667eea;
}

.stat-label {
  font-size: 24rpx;
  color: #6c757d;
}

/* 底部信息 */
.worker-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.register-time {
  font-size: 24rpx;
  color: #adb5bd;
}

.view-detail-arrow {
  font-size: 26rpx;
  color: #667eea;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  color: #6c757d;
  margin-bottom: 16rpx;
}

.empty-tip {
  font-size: 26rpx;
  color: #adb5bd;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
  text-align: center;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 加载更多 */
.load-more {
  padding: 40rpx 0;
  text-align: center;
}

.btn-load-more {
  padding: 20rpx 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 没有更多 */
.no-more {
  padding: 40rpx 0;
  text-align: center;
}

.no-more-text {
  font-size: 26rpx;
  color: #adb5bd;
}

/* 地区选择弹窗 */
.region-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: flex-end;
}

.region-modal-content {
  width: 100%;
  max-height: 70vh;
  background: #FFFFFF;
  border-radius: 24rpx 24rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 搜索框 */
.region-search-box {
  padding: 30rpx;
  border-bottom: 1rpx solid #EEEEEE;
  position: relative;
}

.region-search-input {
  width: 100%;
  height: 70rpx;
  background: #F5F5F5;
  border-radius: 35rpx;
  padding: 0 50rpx 0 30rpx;
  font-size: 28rpx;
}

.region-search-icon {
  position: absolute;
  right: 50rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  opacity: 0.5;
}

/* 地区列表 */
.region-list {
  flex: 1;
  overflow-y: auto;
}

.region-item {
  padding: 30rpx 40rpx;
  font-size: 30rpx;
  color: #333333;
  border-bottom: 1rpx solid #F5F5F5;
  transition: background 0.2s;
}

.region-item:active {
  background: #F5F5F5;
}

.region-item.active {
  background: #E6F7FF;
  color: #667eea;
  font-weight: 600;
}

/* 弹窗底部按钮 */
.region-modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid #EEEEEE;
  gap: 20rpx;
}

.region-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: none;
}

.region-btn.cancel {
  background: #F5F5F5;
  color: #666666;
}

.region-btn.confirm {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #FFFFFF;
}