/* pages/manager/rating-feedback/rating-feedback.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 头部 */
.header {
  background: linear-gradient(135deg, #FFC107 0%, #FFD54F 100%);
  padding: 40rpx 30rpx 30rpx;
  color: #333;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.count {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 筛选器 */
.filter-section {
  display: flex;
  background: white;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #eee;
  gap: 20rpx;
}

.filter-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.filter-tag {
  padding: 12rpx 30rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-tag.active {
  background: linear-gradient(135deg, #FFC107 0%, #FFD54F 100%);
  color: #333;
  font-weight: 600;
}

/* 工单列表 */
.issues-list {
  flex: 1;
  padding: 20rpx 30rpx;
}

.issue-card {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.issue-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* 工单头部 */
.issue-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.issue-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  margin-right: 15rpx;
}

.rating-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.rating-badge.rated {
  background: #e8f5e9;
  color: #4caf50;
}

.rating-badge.unrated {
  background: #fff3e0;
  color: #ff9800;
}

/* 工单描述 */
.issue-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 评分显示 */
.rating-display {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: #fff8e1;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.rating-stars {
  display: flex;
  margin-right: 15rpx;
}

.star {
  font-size: 32rpx;
  color: #ddd;
  margin-right: 4rpx;
}

.star.active {
  color: #FFC107;
}

.rating-text {
  font-size: 26rpx;
  color: #FF9800;
  font-weight: 600;
}

/* 反馈内容 */
.feedback-section {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.feedback-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 8rpx;
}

.feedback-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 工单信息 */
.issue-info {
  display: flex;
  margin-bottom: 15rpx;
}

.info-item {
  flex: 1;
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 8rpx;
}

.info-value {
  font-size: 24rpx;
  color: #666;
}

/* 客户信息 */
.client-info {
  display: flex;
  padding: 15rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-bottom: 15rpx;
}

/* 时间信息 */
.time-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.time-item {
  display: flex;
  align-items: center;
}

.time-label {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.time-value {
  font-size: 24rpx;
  color: #666;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 20rpx;
}

.btn-rate {
  flex: 1;
  background: linear-gradient(135deg, #FFC107 0%, #FFD54F 100%);
  color: #333;
  border: none;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.btn-view {
  background: linear-gradient(135deg, #4caf50 0%, #8bc34a 100%);
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 30rpx;
  font-size: 26rpx;
  color: #ccc;
}

