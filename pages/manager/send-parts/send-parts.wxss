/* pages/manager/send-parts/send-parts.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 80rpx;
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  padding: 16rpx 20rpx;
  color: white;
  flex-shrink: 0;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 4rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

.issue-info {
  background: white;
  margin: 10rpx 16rpx;
  padding: 12rpx 16rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.info-item {
  display: flex;
  margin-bottom: 8rpx;
  line-height: 36rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  color: #666;
  font-size: 24rpx;
  min-width: 120rpx;
  flex-shrink: 0;
}

.value {
  color: #333;
  font-size: 24rpx;
  font-weight: 500;
  flex: 1;
}

.form-section {
  background: white;
  margin: 0 16rpx 10rpx;
  padding: 12rpx 16rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}

.section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.required {
  color: #ff4d4f;
  font-size: 26rpx;
}

.textarea {
  width: 100%;
  min-height: 100rpx;
  padding: 12rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  font-size: 20rpx;
  color: #999;
  margin-top: 6rpx;
}

.work-hours-input {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.unit {
  color: #666;
  font-size: 28rpx;
}

.tips-text {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #999;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 12rpx;
  padding: 10rpx 16rpx;
  padding-bottom: calc(10rpx + env(safe-area-inset-bottom));
  background: white;
  box-shadow: 0 -2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.btn-cancel {
  flex: 1;
  height: 68rpx;
  line-height: 68rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.btn-confirm {
  flex: 2;
  height: 68rpx;
  line-height: 68rpx;
  background: linear-gradient(135deg, #faad14 0%, #ffc53d 100%);
  color: white;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
}

.btn-confirm[disabled] {
  opacity: 0.5;
}

