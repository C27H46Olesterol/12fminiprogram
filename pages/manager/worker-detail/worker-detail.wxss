/* pages/manager/worker-detail/worker-detail.wxss */
.worker-detail-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* ===== 加载状态 ===== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* ===== 维修工信息部分 ===== */
.worker-info-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 20rpx;
}

/* 头部卡片 */
.worker-header-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
  position: relative;
}

.worker-avatar-large {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

.worker-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.worker-name-large {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.worker-phone-large {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.worker-location-large {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.location-icon {
  font-size: 24rpx;
}

.btn-call {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.3);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  padding: 0;
  margin: 0;
  line-height: 1;
}

/* 门店信息卡片 */
.worker-store-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.store-info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
}

.store-info-item:last-child {
  margin-bottom: 0;
}

.store-label {
  color: #666;
  flex-shrink: 0;
}

.store-value {
  color: #333;
  flex: 1;
}

/* 统计卡片 */
.worker-stats-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.stat-box:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.stat-number-large {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label-large {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-hint {
  font-size: 22rpx;
  color: #999;
}

/* Tab 切换栏 */
.tab-bar {
  display: flex;
  background: white;
  border-radius: 20rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.tab-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-weight: bold;
}

/* 内容区域 */
.tab-content {
  min-height: 400rpx;
}

/* ===== 基本信息 Tab ===== */
.info-tab {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  flex-shrink: 0;
  width: 200rpx;
}

.info-value {
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* ===== 工单列表 Tab ===== */
.issues-tab {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.issue-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.issue-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.issue-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.issue-id {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.issue-status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.issue-status.resolved {
  background: #e8f5e9;
  color: #4caf50;
}

.issue-status.processing {
  background: #fff3e0;
  color: #ff9800;
}

.issue-content {
  margin-bottom: 20rpx;
}

.issue-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.issue-info-row {
  margin-bottom: 12rpx;
}

.issue-info-row:last-of-type {
  margin-bottom: 20rpx;
}

.issue-info-item {
  font-size: 24rpx;
  color: #999;
  margin-right: 30rpx;
}

.issue-footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 16rpx;
  border-top: 2rpx solid #f0f0f0;
}

.view-detail {
  font-size: 26rpx;
  color: #667eea;
}

/* ===== 评分列表 Tab ===== */
.ratings-tab {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rating-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.rating-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.rating-stars {
  display: flex;
  gap: 8rpx;
}

.star {
  font-size: 32rpx;
  opacity: 0.3;
}

.star.active {
  opacity: 1;
}

.rating-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff9800;
}

.rating-issue-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.rating-issue-id {
  color: #666;
}

.rating-time {
  color: #999;
}

.rating-content {
  margin-bottom: 20rpx;
}

.rating-comment {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.rating-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.rating-tag {
  padding: 8rpx 20rpx;
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #666;
}

/* ===== 空状态 ===== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  background: white;
  border-radius: 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* ===== 加载更多 ===== */
.load-more {
  padding: 20rpx 0;
  text-align: center;
}

.btn-load-more {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
}

.loading-more {
  padding: 30rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

.no-more {
  padding: 30rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

