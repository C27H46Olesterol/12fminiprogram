/* app.wxss - 全局样式 */

/* 全局变量 */
page {
  /* 品牌色 - 基于图片取色 */
  --primary-color: #1677ff; /* 鲜艳的蓝色 */
  --primary-light: #e6f7ff;
  
  /* 功能色 */
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
  
  /* 中性色 */
  --text-primary: #333333; /* 主要文字 */
  --text-secondary: #666666; /* 次要文字 */
  --text-disabled: #999999; /* 禁用/提示文字 */
  --background-color: #F5F7FA; /* 浅灰背景 */
  --card-background: #FFFFFF;
  --border-color: #EEEEEE;
  
  /* 阴影 */
  --shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

/* 基础样式重置 */
page, view, text, image, button, input, textarea, picker, scroll-view, swiper, swiper-item {
  box-sizing: border-box;
}

page {
  background-color: var(--background-color);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
  line-height: 1.5;
  font-size: 28rpx;
}

/* 通用容器 */
.container {
  padding: 32rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: var(--card-background);
  border-radius: 24rpx; /* 更圆润的角 */
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
}

/* 按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 44rpx; /* 全圆角 */
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  transition: all 0.3s ease;
}

.btn-primary {
  background: var(--primary-color);
  color: #FFFFFF;
}

.btn-primary:active {
  opacity: 0.9;
}

.btn-outline {
  background: transparent;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
}

.btn-block {
  width: 100%;
}

.btn-success {
  background: var(--success-color);
  color: #FFFFFF;
}

.btn-warning {
  background: var(--warning-color);
  color: #FFFFFF;
}

.btn-danger {
  background: var(--error-color);
  color: #FFFFFF;
}

/* 文本工具类 */
.text-center { text-align: center; }
.text-primary { color: var(--primary-color); }
.text-secondary { color: var(--text-secondary); }
.font-bold { font-weight: 600; }
.font-large { font-size: 36rpx; }

/* 布局工具类 */
.flex { display: flex; }
.flex-column { flex-direction: column; }
.flex-center { align-items: center; justify-content: center; }
.flex-between { justify-content: space-between; }
.flex-v-center { align-items: center; }
.mt-20 { margin-top: 20rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-20 { margin-right: 20rpx; }
.mb-10 { margin-bottom: 10rpx; }

/* 状态标签 */
.status-tag {
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  display: inline-block;
}

.status-pending { background: #e6f7ff; color: #1890ff; }
.status-assigned { background: #e6f7ff; color: #1890ff; }
.status-processing { background: #fff7e6; color: #fa8c16; }
.status-parts_request { background: #fff0f6; color: #eb2f96; }
.status-parts_sent { background: #fff7e6; color: #fa8c16; }
.status-parts_received { background: #f6ffed; color: #52c41a; }
.status-resolved { background: #f6ffed; color: #52c41a; }
.status-closed { background: #f5f5f5; color: #999999; }
.status-cancelled { background: #fff1f0; color: #ff4d4f; }

/* 表单样式 */
.form-input {
  background: #F5F7FA;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.form-textarea {
  background: #F5F7FA;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
  min-height: 200rpx;
}
