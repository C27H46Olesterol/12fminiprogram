/* components/empty-state/empty-state.wxss */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  color: var(--text-disabled);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F5F5F5;
  border-radius: 50%;
}

.empty-icon .icon {
  font-size: 60rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  margin-bottom: 16rpx;
  text-align: center;
  color: var(--text-secondary);
}

.empty-tip {
  font-size: 26rpx;
  text-align: center;
  opacity: 0.8;
  margin-bottom: 40rpx;
}

.empty-action {
  margin-top: 20rpx;
}

.empty-action .btn {
  padding: 24rpx 48rpx;
  font-size: 28rpx;
}



































