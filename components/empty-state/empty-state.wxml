<!--components/empty-state/empty-state.wxml-->
<view class="empty-state">
  <view class="empty-icon">
    <text class="icon">{{icon}}</text>
  </view>
  <text class="empty-text">{{text}}</text>
  <text class="empty-tip" wx:if="{{tip}}">{{tip}}</text>
  <view class="empty-action" wx:if="{{actionText}}">
    <button class="btn btn-primary" bindtap="onAction">{{actionText}}</button>
  </view>
</view>



































