/* components/priority-tag/priority-tag.wxss */
.priority-tag {
  display: inline-block;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.priority-high {
  background: #FFEBEE;
  color: #F44336;
}

.priority-medium {
  background: #FFF3E0;
  color: #F57C00;
}

.priority-low {
  background: #E8F5E8;
  color: #4CAF50;
}

.tag-text {
  font-size: 20rpx;
  font-weight: 500;
}



































